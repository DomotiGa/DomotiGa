PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtTCPPort.Text = Main.iUPSTCPPort
  txtTCPHost.Text = Main.sUPSTCPHost
  txtPollTime.Text = Main.iUPSPollTime
  chkDebug.Value = Main.bUPSDebug
  chkEnabled.Value = Main.bUPSEnabled
  btnSave.Enabled = FALSE

  IF Main.bUPSEnabled = FALSE THEN 
    txtTCPPort.Enabled = FALSE
    txtPollTime.Enabled = FALSE
    txtTCPHost.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtTCPPort_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new UPS settings
  rResult = Main.hDB.Exec("UPDATE settings_ups SET debug = &1, polltime = &2, tcphost = &3, tcpport = &4, enabled = &5 WHERE id = 1", chkDebug.Value, txtPollTime.Text, txtTCPHost.Text, txtTCPPort.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("ups") ' reload settings
  IF rResult.Count THEN
    Main.bUPSEnabled = rResult!enabled
    Main.sUPSTCPHost = rResult!tcphost
    Main.iUPSTCPPort = rResult!tcpport
    Main.iUPSPollTime = rResult!polltime
    Main.bUPSDebug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_UPS()
  ELSE
    XMLClient.ModuleRestart("UPS")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("ups", TRUE) ' get defaults

  chkEnabled.Value = rResult!enabled
  txtPollTime.Text = rResult!polltime
  txtTCPHost.Text = rResult!tcphost
  txtTCPPort.Text = rResult!tcpport
  chkDebug.Value = rResult!debug

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  txtPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPHost_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtPollTime_KeyPress()

  btnSave.Enabled = TRUE

END
