PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtUDPRead.Text = Main.iPwrCtrlUDPRead
  txtUDPSend.Text = Main.iPwrCtrlUDPSend
  txtUserPw.Text = Main.sPwrCtrlUserPw
  chkDebug.Value = Main.bPwrCtrlDebug
  chkEnabled.Value = Main.bPwrCtrlEnabled
  btnSave.Enabled = FALSE

  IF Main.bPwrCtrlEnabled = FALSE THEN
    txtUDPRead.Enabled = FALSE
    txtUDPSend.Enabled = FALSE
    txtUserPw.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtUDPRead_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtUserPw_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtUDPSend_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new PwrCtrl settings
  rResult = Main.hDB.Exec("UPDATE settings_pwrctrl SET debug = &1, udpread = &2, udpsend = &3, enabled = &4, userpw = &5 WHERE id = 1", chkDebug.Value, txtUDPRead.Text, txtUDPSend.Text, chkEnabled.Value, txtUserPw.Text)
  rResult = Main.GetSettingTable("pwrctrl") ' reload settings
  IF rResult.Count THEN
    Main.bPwrCtrlEnabled = rResult!enabled
    Main.iPwrCtrlUDPRead = rResult!udpread
    Main.iPwrCtrlUDPSend = rResult!udpsend
    Main.sPwrCtrlUserPw = rResult!userpw
    Main.bPwrCtrlDebug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_PwrCtrl()
  ELSE
    XMLClient.ModuleRestart("PwrCtrl")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("pwrctrl", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtUDPRead.Text = rResult!udpread
    txtUDPSend.Text = rResult!udpsend
    txtUserPw.Text = rResult!userpw
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtUDPRead.Enabled = chkEnabled.Value
  txtUDPSend.Enabled = chkEnabled.Value
  txtUserPw.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END
