PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtTelnetPort.Text = Main.iTelnetServerPort
  chkDebug.Value = Main.bTelnetServerDebug
  chkEnabled.Value = Main.bTelnetServerEnabled
  btnSave.Enabled = FALSE

  IF Main.bTelnetServerEnabled = FALSE
    txtTelnetPort.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new TelnetServer settings
  rResult = Main.hDB.Exec("UPDATE settings_telnetserver SET debug = &1, telnetport = &2, enabled = &3 WHERE id = 1", chkDebug.Value, txtTelnetPort.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("telnetserver") ' reload settings
  IF rResult.Count THEN
    Main.bTelnetServerEnabled = rResult!enabled
    Main.iTelnetServerPort = rResult!telnetport
    Main.bTelnetServerDebug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_TelnetServer()
  ELSE
    XMLClient.ModuleRestart("TelnetServer")
  END IF
  ME.Close

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("telnetserver", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtTelnetPort.text = rResult!telnetport
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtTelnetPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTelnetPort_KeyPress()

  btnSave.Enabled = TRUE

END
