' command: CHUP/CHDW, DCCH (1-99) for TV channel
' call with TVChannel Up/Down or 1-99
Private Sub TVChannel(sState As String) As Variant

  Select Case LCase(sState)
    Case "1" To "99"
      If SendCheckResponse("DCCH" & sState) Then
        Return True
      Else
        If $bSharpTVDebug Then Main.WriteDebugLog(LogLabel & "Error sending TV-Channel-Command to TV!")
        Return False
      Endif
    Case "up"
      If SendCheckResponse("CHUP") Then
        Return True
      Else
        If $bSharpTVDebug Then Main.WriteDebugLog(LogLabel & "Error sending TV-Channel-UP-Command to TV!")
        Return False
      Endif
    Case "down"
      If SendCheckResponse("CHDW") Then
        Return True
      Else
        If $bSharpTVDebug Then Main.WriteDebugLog(LogLabel & "Error sending TV-Channel-DOWN-Command to TV!")
        Return False
      Endif
  End Select

End

