      If SendCheckResponse("IAVD" & sState) Then
        SharpTVSetValue(sItem, sState)
        Return sState
      Else
        If $bSharpTVDebug Then Main.WriteDebugLog(LogLabel & "Error sending IAVD-Command to TV!")
