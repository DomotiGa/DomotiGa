    CASE 29 ' JeeLabs Interface
      IF Main.bDevicesDebug THEN Main.WriteDebugLog("[Devices] Jeelabs Interface: " & sAddress & " " & sValue)
      IF Main.hJeeLabs THEN
        Main.hJeeLabs.SendCommand(sAddress, sValue)
