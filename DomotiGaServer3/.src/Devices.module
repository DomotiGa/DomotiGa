      END IF
    CASE 30 ' Velleman Interface
      IF Main.bDevicesDebug THEN Main.WriteDebugLog("[Devices] Velleman K8055 : " & sAddress & " " & sValue)
      IF Main.hK8055 THEN
        Main.hK8055.SendCommand(sAddress, sValue)
