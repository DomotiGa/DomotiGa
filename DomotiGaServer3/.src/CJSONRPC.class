  hJSONRPC.Register(hRpcFunc)

  ' ### DSC Security methods ###
  hRpcFunc = New JsonRpcFunction("dsc.setpin")
  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("dsc.setarm")
  hJSONRPC.Register(hRpcFunc)

  ' ### LEDMatrix methods ###
  hRpcFunc = New JsonRpcFunction("ledmatrix.display")
  hJSONRPC.Register(hRpcFunc)

  ' ### AVControl methods ###
  hRpcFunc = New JsonRpcFunction("avcontrol.set")
  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("avcontrol.get")
  hJSONRPC.Register(hRpcFunc)

  ' ### CUL methods ###
  hRpcFunc = New JsonRpcFunction("cul.simulate")
  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("cul.queuecommand")
  hJSONRPC.Register(hRpcFunc)

  ' ### Calendar methods ###
  hRpcFunc = New JsonRpcFunction("calendar.get")
  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("calendar.set")
  hJSONRPC.Register(hRpcFunc)

  ' ### Thermostat methods ###
  hRpcFunc = New JsonRpcFunction("thermostat.derogateheating")
  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("thermostat.getderogateheating")
  hJSONRPC.Register(hRpcFunc)

  ' ### Commander methods ###
  hRpcFunc = New JsonRpcFunction("cmdr.plcbus.txcommand")
  hJSONRPC.Register(hRpcFunc)

  ' ### Subscribe methods ###
  hRpcFunc = New JsonRpcFunction("subscribe.logupdate")
  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("subscribe.deviceupdate")
  hJSONRPC.Register(hRpcFunc)

  ' ### Tools Commander methods ###
  hRpcFunc = New JsonRpcFunction("tools.openzwave.get")
  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("tools.openzwave.set")
  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("tools.rfxcom.get")
  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("tools.rfxcom.set")
  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("tools.serialport.get")
  hJSONRPC.Register(hRpcFunc)

  ' ---------------------------------------------------------
  ' First try to cleanup any left over stunnel processes
  ' ---------------------------------------------------------
  If Exist(Main.sBaseDir & "/wrappers/stunnel/" & "stunnel.pid") Then
    Try sPid = File.Load(Main.sBaseDir & "/wrappers/stunnel/" & "stunnel.pid")
    If Not Error Then
      If InStr(sPid, "\n") Then sPid = Mid(sPid, 1, InStr(sPid, "\n") - 1)

      Try iPid = CInt(sPid)
      If Not Error Then
        ' Now kill the process with a kill signal (if existing)
        Try Exec ["kill", "-9", iPid]
        Wait 0.1
      Endif
    Endif
  Endif

  ' ---------------------------------------------------------
  ' All have been setup, now try to start the JSOC-RPC server
  ' ---------------------------------------------------------
  If $bHTTPEnabled Then
    Try hJSONRPC.Listen($iHTTPPort, $iMaxConn, $bDebug)
  Else
    Try hJSONRPC.Listen($iHTTPPort, $iMaxConn, $bDebug, "localhost")
  Endif

  If hJSONRPC.Listening Then
    ' Write to main logfile we connected successfully
    Main.WriteLog(LogLabel & PluginFriendlyName & " Server listening on Port " & $iHTTPPort)
    bOk = True
  Else
    Main.WriteLog(LogLabel & "ERROR: " & PluginFriendlyName & " Server FAILED listen on  Port " & $iHTTPPort)
    ErrorText = "Net Not Active"
    bOk = False
  Endif

  ' ---------------------------------------------------------
  ' Start HTTPS support via stunnel
  ' ---------------------------------------------------------
  If $bHTTPSEnabled And If bOk Then
    If Util.ProgramExist("stunnel") Then 
      ' stunnel -f -p stunnel.pem -P /var/tmp/stunnel.pid -d 9091 -r localhost:9090
      pSTunnel = Exec ["stunnel", "-f", "-p", $sSSLCertificate, "-P", Main.sBaseDir & "/wrappers/stunnel/" & "stunnel.pid", "-d", $iHTTPSPort, "-r", "localhost:" & $iHTTPPort] For Read As "pSTunnel"
      If Error Then
        Main.WriteLog(LogLabel & "ERROR: " & PluginFriendlyName & " Server FAILED listen on SSL Port " & $iHTTPSPort)
        Main.WriteLog(LogLabel & "ERROR: " & Error.Text)

        ' If HTTP is disabled, this is fatal
        If Not $bHTTPEnabled Then
          ErrorText = "command 'stunnel' failed to execute, response '" & Error.Text & "'"
          bOk = False
        Endif
      Else
        Main.WriteLog(LogLabel & PluginFriendlyName & " Server listening on SSL Port " & $iHTTPSPort)
      Endif
    Else
      ' If HTTP is disabled, this is fatal
      If Not $bHTTPEnabled Then
        ErrorText = "command 'stunnel' not found, did you install it?"
        bOk = False
      Endif
    Endif
  Endif

  IsRunning = bOk
  Return bOk

Catch ' some errors
  Main.WriteLog(LogLabel & "ERROR: " & PluginFriendlyName & " Server FAILED listen on  Port " & $iHTTPPort)
  Main.WriteLog(LogLabel & "ERROR: " & Error.Text)
  IsRunning = False
  ErrorText = Error.Text
  ErrorWhere = Error.Where

  Return False

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' Process error output produced by the process - only relevant if we get an error 
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Sub pSTunnel_Error(sError As String)

  sSTunnel &= sError

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' Process died
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Sub pStunnel_Kill()

  Print sSTunnel
  Print "State=" & pSTunnel.State & ", Value=" & pSTunnel.Value

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' Shutdown our JSON-RPC server
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Sub Disconnect()

  ' Stop the possible running process
  Try pSTunnel.Kill

  ' Cleanup the pid file
  Try Kill Main.sBaseDir & "/wrappers/stunnel/" & "stunnel.pid"

  hJSONRPC.Stop()

End

