  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("squeezebox.set")
  hJSONRPC.Register(hRpcFunc)

  ' ### Razberry methods ###
  hRpcFunc = New JsonRpcFunction("razberry.updatesready")
  hJSONRPC.Register(hRpcFunc)

  ' ### RRDTool methods ###
