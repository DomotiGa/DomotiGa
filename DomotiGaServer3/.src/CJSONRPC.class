  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("event.run")
  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("action.list")
  hJSONRPC.Register(hRpcFunc)
  hRpcFunc = New JsonRpcFunction("action.run")
  hJSONRPC.Register(hRpcFunc)
