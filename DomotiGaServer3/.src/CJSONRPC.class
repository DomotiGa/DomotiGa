'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' Method=plugin.list
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Private Sub Call_Plugin_List()

  Dim cPl As CPluginEntry
  Dim cValue As New JSONCollection
  Dim aValue As New Collection[]

  ' friendlyname
  ' pluginversion

  ' Loop through all plugins
  For Each cPl In Plugin.cPluginList

    If cPl.Instance = 0 Then Continue

    cValue = New JSONCollection
    cValue.Add(cPl.name, "name")
    cValue.Add(cPl.Instance, "instance_id")
    cValue.Add(cPl.Settings["enabled"], "enabled")

    If cPl.Interface Then
      Try cValue.Add(cPl.Interface.IsRunning, "running")
      If Error Then cValue.Add(False, "running")

      Try cValue.Add(cPl.Interface.ErrorText, "error")
      If Error Then cValue.Add("UNKNOWN", "error")
    Endif

    aValue.Add(cValue)
  Next

