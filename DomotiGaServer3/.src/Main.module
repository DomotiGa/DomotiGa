  ' XBMCxPl close
  Try hXBMCxPL = Null
  ' ping
  Try Ping.tPing.Stop
  ' shell
  Try Shell.tShell.Stop
  ' xpl close
  Try hxPL.Disconnect
  ' UDP broadcast server close
  Try hBroadcastEvent.Close
  ' pachube
  Try Pachube.hPost.Close
  ' hddtemp
  Try HDDTemp.hHDDTemp.Close
  ' rfxcom close
  Try hRFXComxPL = Null
  ' sms close
  Try hSMS.Disconnect
  ' xmlrpc close
  Try hXMLRPC.Disconnect
  ' dsc close
  Try hDSC.Disconnect
  ' z-wave close
  Try hZWave.Disconnect

  ' Stop all plugins
  Plugin.StopAll()

  ' db close
  Try hDB.Close

  WriteLog("[Main]   ---- Program End ----")

