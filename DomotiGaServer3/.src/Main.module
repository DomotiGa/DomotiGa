'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' save globalvars to database
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Sub SaveGlobalVars()

  ' DIM tableGlobalVars AS Table
  Dim vValue As Variant
  Dim rResult As Result

  ' erase table contents only
  Try Main.hDB.Exec("TRUNCATE TABLE globalvars")

  ' write vars to db table
  For Each vValue In Main.GlobalVar
    Main.hDB.Begin()
    rResult = Main.hDB.Create("globalvars")
    rResult!var = Main.GlobalVar.Key
    If vValue = "<EMPTY>" Then
      rResult!value = ""
    Else
      rResult!value = vValue
    Endif
    rResult.Update()
    Main.hDB.Commit()
  Next
  If Main.bMainDebug Then Main.WriteDebugLog("[Main] Globalvars Saved.")

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' restore all globalvars from database
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Sub RestoreGlobalVars()

  Dim rResult As Result

  ' Configure all system variables. 1=ReadOnly, 2=ReadWrite
  ' When not added - it is a custom variable, anything allowed
  GlobalVar_System.Clear()
  GlobalVar_System.Add(1, "Program_Start")
  GlobalVar_System.Add(1, "Second")
  GlobalVar_System.Add(1, "Minute")
  GlobalVar_System.Add(1, "Program_Uptime")
  GlobalVar_System.Add(1, "Hour")
  GlobalVar_System.Add(1, "Day")
  GlobalVar_System.Add(1, "Month")
  GlobalVar_System.Add(1, "Weekday")
  GlobalVar_System.Add(1, "Time_Of_Day")
  GlobalVar_System.Add(1, "Year")
  GlobalVar_System.Add(1, "Sunrise")
  GlobalVar_System.Add(1, "Sunrise_Twilight")
  GlobalVar_System.Add(1, "Sunset")
  GlobalVar_System.Add(1, "Sunset_Twilight")
  GlobalVar_System.Add(1, "Season")
  GlobalVar_System.Add(1, "Tagline")
  GlobalVar_System.Add(1, "Weekend")
  GlobalVar_System.Add(1, "Dark")
  GlobalVar_System.Add(2, "House_Mode")
  GlobalVar_System.Add(2, "Mute")

  ' DataTypes:
  ' gb.Boolean = 1, gb.Byte = 2, gb.Short = 3, gb.Integer = 4, gb.Long = 5, gb.Single = 6,
  ' gb.Float = 7, gb.Date = 8, gb.String = 9, gb.Variant = 11, gb.Null = 15, gb.Object = 16

  Try rResult = Main.hDB.Exec("SELECT * FROM globalvars")
  If rResult Then
    If rResult.Count Then
      For Each rResult
        If rResult!value = "" Then
          Main.GlobalVar[rResult!var] = "<EMPTY>"
        Else

          If TypeOf(rResult!datatype) <> Null Then

            Select rResult!datatype
              Case gb.Boolean
                Try Main.GlobalVar[rResult!var] = CBool(CInt(rResult!value))
                If Error Then
                  Main.GlobalVar[rResult!var] = False

                  ' Try to fix value like "T"
                  If TypeOf(rResult!value) = gb.String Then
                    If rResult!value = "T" Then Main.GlobalVar[rResult!var] = True
                  Endif 
                Endif
              Case gb.Byte
                Try Main.GlobalVar[rResult!var] = CByte(rResult!value)
                If Error Then Main.GlobalVar[rResult!var] = CByte(0)
              Case gb.Short
                Try Main.GlobalVar[rResult!var] = CShort(rResult!value)
                If Error Then Main.GlobalVar[rResult!var] = CShort(0)
              Case gb.Integer
                Try Main.GlobalVar[rResult!var] = CInt(rResult!value)
                If Error Then Main.GlobalVar[rResult!var] = CInteger(0)
              Case gb.Long
                Try Main.GlobalVar[rResult!var] = CLong(rResult!value)
                If Error Then Main.GlobalVar[rResult!var] = CLong(0)
              Case gb.Single
                Try Main.GlobalVar[rResult!var] = CSingle(rResult!value)
                If Error Then Main.GlobalVar[rResult!var] = CSingle(0)
              Case gb.Float
                Try Main.GlobalVar[rResult!var] = CFloat(rResult!value)
                If Error Then Main.GlobalVar[rResult!var] = CFloat(0)
              Case gb.Date
                Try Main.GlobalVar[rResult!var] = CDate(rResult!value)
                If Error Then Main.GlobalVar[rResult!var] = CDate(Now())
              Default
                Main.GlobalVar[rResult!var] = CString(rResult!value)
            End Select

          Else
            Main.GlobalVar[rResult!var] = CString(rResult!value)
          Endif
        Endif
      Next
      If Main.bMainDebug Then Main.WriteDebugLog("[Main] Globalvars Restored.")
    Endif
  Endif

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' check if command can be found on system
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Function ProgramExist(sProg As String) As Boolean

  Dim sTemp As String
  Dim iPos As Integer

  iPos = String.InStr(sProg, " ")
  If iPos Then sProg = String.Left(sProg, iPos - 1)

  Shell "which " & sProg To sTemp

  If Not sTemp Then Return False
  Return Not (Trim$(sTemp) Like "which: *")

End

