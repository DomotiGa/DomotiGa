  If bExitProgram Then
    CloseAll()
    Quit
  Endif

  ' Only setup GlobalVars if we are in Server mode
  If bServer Then
    SetGlobalVars()
  Else
    ' Update date/time in Client mode
    dTime = Now()

    If (dPrev_Time <> dTime) Then
      If (Minute(dPrev_Time) <> Minute(dTime)) Then
        FMain.txtTime.Text = Format$(Now(), "d mmmm h:nn")
        FMain.UpdateStatusPanel()
      Endif
    Endif

    dPrev_Time = dTime
  Endif

End

