Public Function DateTimeFromSqlToApp(StrDateTime As String) As String

  Return (Mid(StrDateTime, 7, 2) & "/" & Mid(StrDateTime, 5, 2) & "/" & Mid(StrDateTime, 1, 4) & " - " & Mid(StrDateTime, 9, 2) & ":" & Mid(StrDateTime, 11, 2))

End

