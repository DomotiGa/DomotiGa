'--- Wrap text to a certain width, and return a string with GB.newline in it ---
Public Function Wrapit(StrText As String, IntWidth As Integer, Frm As Form) As String

  '--- declare variables ---
  Dim IntCount, IntI As Integer
  Dim LblTmp As New Label(Frm)

  LblTmp.AutoResize = True
  LblTmp.Visible = False
  LblTmp.X = 0
  LblTmp.Y = 0
  LblTmp.Height = 0
  LblTmp.Width = 0
  LblTmp.Text = ""
  IntCount = 0
  '--- first, count spaces in text ---
  For IntI = 1 To Len(StrText)
    If Mid$(StrText, IntI, 1) = " " Then IntCount = IntCount + 1
  Next
  '--- next, wrapit ---
  For IntI = 1 To IntCount + 1
    LblTmp.Text = LblTmp.Text & Main.ParseTag(StrText, IntI, " ") & " "
    If LblTmp.Width > IntWidth Then
      LblTmp.text = Left(LblTmp.Text, Len(LblTmp.Text) - Len(Main.ParseTag(StrText, IntI, " ")) - 1) & gb.newline & Main.ParseTag(StrText, IntI, " ") & " "
    Endif
  Next
  LblTmp.text = Trim(LblTmp.Text)
  Return LblTmp.Text

End

'--- set the TextProperty of the given Object(ByName) to the given Text ---
Public Sub SetTextProperty(StrObjectName As String, StrText As String, ObjParent As Object)

  '--- declare variables ---
  Dim Obj As Object

  For Each Obj In ObjParent.Children
    If UCase(Obj.Name) = UCase(StrObjectName) Then
      Object.SetProperty(Obj, "Text", StrText)
    Endif
    SetTextProperty(StrObjectName, StrText, Obj)
  Next

Finally

End

'--- try to retrieve a valid translation trough internet ---
Public Function TranslateViaInternet(StrToTranslate As String, StrDestinationLanguage As String) As String

  '--- declare variables --- 
  Dim hHttpC As HttpClient
  Dim StrBuffer As String

  '--- when no translations are needed, simply return the English string back ---
  If UCase(StrDestinationLanguage) = "EN" Or UCase(StrDestinationLanguage) = "US" Or Not Main.bGTranslateEnabled Then
    Return StrToTranslate
  Endif

  '--- otherwise, do translation ---
  hHttpC = New HttpClient As "hHttpC"
  ' free translation service is stopped since 1 Dec 2011
  ' hHttpC.URL = "http://ajax.googleapis.com/ajax/services/language/translate?v=1.0&q=" & CGI.Encode(StrToTranslate) & "&langpair=en|" & LCase(StrDestinationLanguage)
  hHttpC.URL = "https://www.googleapis.com/language/translate/v2?key=" & Main.sGTranslateAPIKey & "&source=en&target=" & LCase(StrDestinationLanguage) & "&q=" & CGI.Encode(StrToTranslate)
  ' one has to sign up via Google Console and obtain an API key US$20/Mchars

  hHttpC.Async = False
  hHttpC.Timeout = 5
  hHttpC.Get

  '--- check if succesfull ---
  If hHttpC.Status < 0 Then
    '--- something went wrong ---
    Main.WriteDebugLog("ERROR: TranslateViaInternet: " & CStr(hHttpC.Status), False)
    StrBuffer = ""
  Else
    '--- success - read the data ---
    If Lof(hHttpC) Then StrBuffer = Read #hHttpC, Lof(hHttpC)
  Endif
  If InStr(StrBuffer, "Suspected Terms of Service Abuse") Then
    Message(("Google Translation service not available.\nYou need to sign up to use it.\nTranslation is turned off."))
    Main.bGTranslateEnabled = False
    hHttpC.Close
    hHttpC = Null
    Return StrToTranslate
  Endif
  If InStr(StrBuffer, "Suspected Terms of Service Abuse") Then
    ' Message(("Google Translation service not available.\nYou need to sign up to use it.\nTranslation is turned off."))
    Main.WriteDebugLog("ERROR: TranslateViaInternet Service denial: " & CStr(hHttpC.Status), False)
    Main.bGTranslateEnabled = False
    StrBuffer = ""
  Endif

  StrBuffer = Right(StrBuffer, Len(StrBuffer) - 36)
  StrBuffer = Left(StrBuffer, Len(StrBuffer) - 51)
  hHttpC.Close
  hHttpC = Null
  If Len(StrBuffer) = 0 Then Return StrToTranslate
  Return StrBuffer

End

'--- translate the given string ---
Public Sub Translate(StrText As String) As String

  '--- declare variables ---
  Dim rRes As Result
  Dim StrNL, StrDE, StrFR As String

  If Main.sAppLanguage = "US" Then
    Return StrText
  Else
    rRes = Main.hDB.Exec("SELECT &1 AS translation FROM dictionary where US = &2", Main.sAppLanguage, StrText)
    If rRes Then
      If rRes.Count > 0 Then
        If Len(rRes!translation) > 0 Then
          Return rRes!translation
        Else
          Return StrText
        Endif
      Else
        If Len(Trim(StrText)) > 0 Then
          StrNL = Main.TranslateViaInternet(StrText, "NL")
          StrFR = Main.TranslateViaInternet(StrText, "FR")
          StrDE = Main.TranslateViaInternet(StrText, "DE")
          Main.hDB.Exec("INSERT INTO dictionary (US,NL,FR,DE,CreationDate,ModificationDate,FK_Users) VALUES(&1,&2,&3,&4,&5,&6,&7)", StrText, StrNL, StrFR, StrDE, Format$(Now, "yyyymmddhhnn"), Format$(Now, "yyyymmddhhnn"), 1)
          Select Case UCase(Main.sAppLanguage)
            Case "NL"
              StrText = StrNL
            Case "DE"
              StrText = StrDE
            Case "FR"
              StrText = StrFR
          End Select
        Endif
        Return StrText
      Endif
    Endif
  Endif
  rRes = Null

End

