'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' Process a broadcast message from the server
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Sub BroadcastReceived(sKey As String, sData As String)

  Dim aScan As String[]

  Select sKey
    Case "[DeviceUpdate]"
      If FDevices.Visible And If FDevices.bAutoRefresh Then FDevices.GetDeviceList()
    Case "[GlobalVar]"
      aScan = Scan(sData, "*|*")
      If aScan.Count = 2 Then Main.SetGlobalVar(aScan[0], aScan[1])
    Case "[MainLog]"
      Main.WriteServerLog(sData, "MainLog")
    Case "[DebugLog]"
      Main.WriteServerLog(sData, "DebugLog")
    Case "[SpeakLog]"
      Main.WriteServerLog(sData, "SpeakLog")
    Case "[ControlUpdate]"
      If FControl.Visible Then FControl.ReloadPage()
    Case "[PhoneCallUpdate]"
      If FPhone.Visible Then FPhone.GetPhoneCallsList()
    Case "[NotifySend]"
      aScan = Scan(sData, "*|*|*")
      If aScan.Count = 3 Then Exec ["/usr/bin/notify-send", aScan[0], aScan[1], "-i", aScan[2]]
    Case "[PLCBUSStatus]"
