  sXBMCxPLRXAddress = rResult!rxaddress
  sXBMCxPLTXAddress = rResult!txaddress
  bXBMCxPLDebug = rResult!debug

Catch
  Message.Error(("An error occured while loading settings from the database!\nIs your database version correct?\n\nError: " & Error.Text & " " & Error.Code & (" at ") & Error.where))
  CloseAll()
  Quit

End

