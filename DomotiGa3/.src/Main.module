'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' this is where domotiga starts
' determine basedir, set language and run application
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Function Main() As Boolean

  ' Set font to default "Sans Serif" with size 9
  Application.Font.Name = "Sans Serif"
  Application.Font.Size = 9

  ' determine basedir
  If Exist(Application.Path &/ "logs") Then
    sBaseDir = Application.Path
  Else If Exist(Mid$(Application.Path &/ "logs", 1, RInStr(Application.Path, "/")))
    sBaseDir = Mid$(Application.Path, 1, RInStr(Application.Path, "/"))
  Else
    Message.Error(("Couldn't determine DomotiGa's basedir."))
    Quit
  Endif

  ' parse cmd LINE arguments
  ParseArgs()

  ' load program settings from .conf file
  GetConfig()

  ' set language
  System.Language = sLanguage
  InitLanguage()

  ' open main form
  FMain.Show()

End

Public Sub Application_Error()

  Dim sBackTrace, sTrace As String

  For Each sBackTrace In Error.Backtrace
    sTrace &= sBackTrace & "\n"
  Next
  Message.Error("Error: " & Error.Text & " " & Error.Code & " at " & Error.where & "\n\nBacktrace:\n" & sTrace & "Program aborted.")
  Main.WriteLog("Error: " & Error.Text & " " & Error.Code & " at " & Error.where & "\n\nBacktrace:\n" & sTrace & "Program aborted.")

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' parse command line arguments
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Private Function ParseArgs()

  Dim sArg As String
  Dim iCnt As Integer

  For iCnt = 1 To Application.Args.Count - 1
    sArg = Application.Args[iCnt]
    If Left(sArg) = "-" Then
      If sArg = "-h" Then
        ' display help info
        Print Application.Name & " version " & sProgramVersion
        Print "Copyright(C) 2008-" & Year(Now) & " Ron Klinkien"
        Print
        Print "This program is free software; you can redistribute it and/or"
        Print "modify it under the terms of the GNU General Public License as"
        Print "published by the Free Software Foundation; either version 2, or"
        Print "(at your option) any later version."
        Print
        Print "Usage: " & Application.Args[0] & " [options]"
        Print
        Print "Options:"
        Print " -h              display this help"
        Print " -c <configfile> specify config file"
        Print
        Quit
      Else If Left(sArg, 2) = "-c" Then
        ' run with specified config file
        If Len(sArg) > 2 Then
          sSettings = Trim(Right(sArg, Len(sArg) - 2))
        Else
          If iCnt < (Application.Args.Count - 1) Then
            sSettings = Trim(Application.Args[iCnt + 1])
          Else
            Main.WriteLog("Error: No config filename specified, using default ...")
          Endif
        Endif
      Endif
    Endif
  Next

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' set application language to regional settings
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Private Sub InitLanguage()

  '--- declare variables ---
  Dim StrLanguage As String
  Dim StrAppLanguage As String = ""

  StrLanguage = UCase(Trim(Application.Env["LANGUAGE"]))
  If Len(StrLanguage) < 1 Then
    Strlanguage = UCase(Trim(Application.Env["LANG"]))
  Endif
  If Len(StrLanguage) < 1 Then StrLanguage = "US"

  Select Case Left(StrLanguage, 2)
    Case "UK", "US", "EN"
      StrAppLanguage = "US"
    Case "NL", "BE"
      StrAppLanguage = "NL"
    Case "FR"
      StrAppLanguage = "FR"
    Case "DE"
      StrAppLanguage = "DE"
  End Select

  If Len(StrAppLanguage) < 1 Then StrAppLanguage = "US"
  Main.sAppLanguage = StrAppLanguage

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' connect to the mysql database
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Function ConnectDatabase(Optional bFirstTime As Boolean = False) As Boolean

  ' try to close the connection first
  Try hDB.Close

  ' get a new one
  With hDB
    .Type = "mysql"
    .Host = sSQLHost
    .Login = sSQLUser
    .Password = sSQLPass
    .Name = sSQLDatabase
  End With

  ' Try to open the MySQL connection
  Try hDB.Open

  ' Handle errors
  If Error Then
    If InStr(Error.Text, "Cannot open database") = 0 Or If Not bFirstTime Then
      Main.WriteLog("[MySQL] ERROR: " & Error.Text)
    Endif

    Return False
  Endif

  ' all ok
  Return True

Catch ' some errors
  Return False

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' check if we are connected to the mysql database
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Function ConnectedDatabase() As Boolean

  ' Only return True if the connection is open
  If hDB Not Null Then
    If hDB.Opened Then Return True
  Endif
  Return False

End

'-------------------------------------------------------
' update the mysql database
'-------------------------------------------------------
Public Function UpdateDatabase() As Boolean

  Dim rResult As Result
  Dim sSalt, sMD5 As String

  rResult = Main.hDB.Exec("SELECT username, password FROM users WHERE NOT ISNULL(password) AND (length(password) != 33 OR (length(password) = 33 AND substring(password,1,3) != 'MD5'))")
  ' update the 'users' table in database: set all passwords to an md5 hash
  For Each rResult
    sMD5 = Crypt.MD5(rResult!password)
    sSalt = Right$(Left$(sMD5, 11), 8)
    sMD5 = Right$(sMD5, 22)
    Main.hDB.Exec("UPDATE users SET password = &1 WHERE username = &2", "MD5" & sSalt & sMD5, rResult!username)
    Main.WriteLog("MySQL users table password changed to MD5 hash for user '" & rResult!username & "'")
  Next
  Return True

Catch ' some errors in update db
  Main.WriteLog("MySQL update error: " & ERROR.Text)
  Return False

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' display startup information
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Sub DisplayProgramInfo()

  Dim sUptime, sModified As String

  With Stat(Application.Path)
    sModified = Format$(.LastModified, "yyyy-mm-dd hh:nn:ss")
  End With

  Exec ["uptime"] To sUptime
  WriteLog("[Main]  ---- Program Restart ----")
  WriteLog("[Main] Starting " & Application.Name & " V" & Main.sProgramVersion & " last updated on " & sModified)
  WriteLog("[Main] Running on host '" & System.Host & "' (pid " & Application.Id & ") as user '" & System.User.Name & "'. (id " & System.User.Id & ")")
  WriteLog("[Main] System language is '" & System.Language & "' on architecture '" & System.Architecture & "'.")
  WriteLog("[Main] Program base directory is '" & sBaseDir & "'.")
  WriteLog("[Main] Database settings are loaded from '" & sSettings & "'.")
  WriteLog("[Main] Active logfiles are '" & sMainLogFile & "', '" & sSpeakLogFile & "' and '" & sDebugLogFile & "'.")
  WriteLog("[Main] Running on Gambas version " & GetGambasVersion())
  WriteLog("[Main] Server uptime is " & Left$(Replace$(sUptime, "  ", " "), -1))
  WriteLog("[Main] This DomotiGa instance is running in " & IIf(bServer, "server", "client") & " mode.")
  If Not bServer Then
    WriteLog("[Main] The JSON-RPC server URL is 'http://" & sJSONRPCHost & ":" & iJSONRPCPort & "/'")
    WriteLog("[Main] The XML-RPC server URL is 'http://" & sXMLRPCHost & ":" & iXMLRPCPort & "/'")
  Endif

  ' check if started as superuser
  If System.User.Id = 0 Then
    Select Message.Warning("You have started DomotiGa as superuser/root!\nDoing this imposes a huge security risk!\nSo you have been warned!", "Continue", "Abort")
      Case 2
        Quit
    End Select
  Endif

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' create main directory structure if incomplete
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Sub CreateDirectoryTree()

  If Not Exist(sBaseDir) Then
    WriteLog("[Main] Creating default directory structure.")
    Try Mkdir (sBaseDir)
    Try Mkdir (sBaseDir &/ "logs")
    Try Mkdir (sBaseDir &/ "www")
    Try Mkdir (sBaseDir &/ "icons")
    Try Mkdir (sBaseDir &/ "images")
    Try Mkdir (sBaseDir &/ "sounds")
    Try Mkdir (sBaseDir &/ "rrd")
    Try Mkdir (sBaseDir &/ "rrd/graphs")
    Try Mkdir (sBaseDir &/ "tvguide")
    Try Mkdir (sBaseDir &/ "tvguide/imdb")
    Try Mkdir (sBaseDir &/ "tvguide/cache")
  Endif

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' set a value in the config file
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Sub SetConfigValue(sKey As String, vValue As Variant)

   Dim hSettings As Settings

   hSettings = New Settings(sBaseDir &/ sSettings)
   hSettings[sKey] = vValue
   hSettings.Save

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' get a value from the config file
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Private Function GetConfigValue(sKey As String, Optional vValue As Variant) As Variant

  Dim hSettings As Settings

  hSettings = New Settings(sBaseDir &/ sSettings)

  If Not IsNull(vValue) Then
    Return hSettings[sKey, vValue]
  Else
    Return hSettings[sKey]
  Endif

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' save settings to file
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Sub SetConfig()

  Dim sMode As String

  If bServerCurrent Then
    sMode = "server"
  Else
    sMode = "client"
  Endif

  SetConfigValue("MySQL/Host", sSQLHost)
  SetConfigValue("MySQL/User", sSQLUser)
  SetConfigValue("MySQL/Password", sSQLPass)
  SetConfigValue("MySQL/Database", sSQLDatabase)
  SetConfigValue("Program/Language", sLanguage)
  SetConfigValue("Program/Mode", sMode)
  SetConfigValue("Program/RPC", sRPCType)
  SetConfigValue("JSONRPC/Host", sJSONRPCHost)
  SetConfigValue("JSONRPC/Port", iJSONRPCPort)
  SetConfigValue("XMLRPC/Host", sXMLRPCHost)
  SetConfigValue("XMLRPC/Port", iXMLRPCPort)
  SetConfigValue("Graphs/Url", sGraphsUrl)

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' load config, create default config file if not found
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Public Sub GetConfig()

  Dim hSettings As Settings
  Dim sMode As String

  ' load basic settings from file, if the settings file is not
  ' found then create one with default settings
  If Not Exist(sBaseDir &/ sSettings) Then
    hSettings = New Settings(sBaseDir &/ sSettings)
    hSettings["MySQL/Host"] = "localhost"
    hSettings["MySQL/User"] = "domouser"
    hSettings["MySQL/Password"] = "kung-fu"
    hSettings["MySQL/Database"] = "domotiga"
    hSettings["Program/Language"] = "en_US.UTF-8"
    hSettings["Program/Mode"] = "server"
    ' New config => Enable JSON-RPC, not XML-RPC
    hSettings["Program/RPC"] = "JSONRPC"
    hSettings["JSONRPC/Host"] = "localhost"
    hSettings["JSONRPC/Port"] = 9090
    hSettings["XMLRPC/Host"] = "localhost"
    hSettings["XMLRPC/Port"] = 9009
    hSettings["GUI/WindowX"] = 175
    hSettings["GUI/WindowY"] = 43
    hSettings["GUI/WindowHeight"] = 613
    hSettings["GUI/WindowWidth"] = 999
    hSettings["Graphs/Url"] = "http://localhost/graphs/"
    hSettings.Save

    ' re-load
    GetConfig()
  Else
    sSQLHost = GetConfigValue("MySQL/Host", "localhost")
    sSQLUser = GetConfigValue("MySQL/User", "domouser")
    sSQLPass = GetConfigValue("MySQL/Password", "kung-fu")
    sSQLDatabase = GetConfigValue("MySQL/Database", "domotiga")
    sLanguage = GetConfigValue("Program/Language", "en_US.UTF-8")
    sMode = GetConfigValue("Program/Mode", "server")

    ' Only set bServer if this is the first run, never change it afterwards (restart is required)
    If InStr(sMode, "server", gb.IgnoreCase) Then
      If bServerStartup = False Then bServer = True
      bServerCurrent = True
    Else
      If bServerStartup = False Then bServer = False
      bServerCurrent = False
    Endif
    bServerStartup = True

    ' Existing config => Keep it on XML-RPC for the moment
    sRPCType = GetConfigValue("Program/RPC", "XMLRPC")
    sXMLRPCHost = GetConfigValue("XMLRPC/Host", "localhost")
    iXMLRPCPort = GetConfigValue("XMLRPC/Port", 9009)
    sJSONRPCHost = GetConfigValue("JSONRPC/Host", sXMLRPCHost)
    iJSONRPCPort = GetConfigValue("JSONRPC/Port", "9090")
    iWindowX = GetConfigValue("GUI/WindowX", 175)
    iWindowY = GetConfigValue("GUI/WindowY", 43)
    iWindowHeight = GetConfigValue("GUI/WindowHeight", 613)
    iWindowWidth = GetConfigValue("GUI/WindowWidth", 999)
    sGraphsUrl = GetConfigValue("Graphs/Url", "http://localhost/graphs/")

    If sRPCType = "JSONRPC" Then
      hRPCType = JSONClient
      JSONClient.$sURL = "http://" & sJSONRPCHost & ":" & iJSONRPCPort
    Else
      hRPCType = XMLClient
    Endif
  Endif

End

