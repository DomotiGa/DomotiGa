Public Sub BroadcastUDPClient_Read()

  Dim sString As String
  Dim aScan As String[]

  sString = Read #hBroadcastUDPCLient, Lof(hBroadcastUDPClient)
  If sString = "[DeviceUpdate]" Then
    If FDevices.Visible And If FDevices.bAutoRefresh Then FDevices.GetDeviceList()
  Else If InStr(sString, "[GlobalVar]") Then
    aScan = Scan(Right(sString, Len(sString) - InStr(sString, "]")), "*|*")
    If aScan.Count = 2 Then SetGlobalVar(aScan[0], aScan[1])
  Else If InStr(sString, "[MainLog]") Then
    WriteServerLog(Right(sString, Len(sString) - InStr(sString, "]")), "MainLog")
  Else If InStr(sString, "[SpeakLog]") Then
    WriteServerLog(Right(sString, Len(sString) - InStr(sString, "]")), "SpeakLog")
  Else If InStr(sString, "[DebugLog]") Then
    WriteServerLog(Right(sString, Len(sString) - InStr(sString, "]")), "DebugLog")
  Else If InStr(sString, "[ControlUpdate]") Then
    If FControl.Visible Then FControl.ReloadPage()
  Else If InStr(sString, "[PhoneCallUpdate]") Then
    If FPhone.Visible Then FPhone.GetPhoneCallsList()
  Else If InStr(sString, "[SecurityUpdate]") Then
    'FDSC.PanelStatusUpdate() - subroutine doesn't seem to exist anymore?
    If InStr(sString, "Entry") Then FMain.OpenPage(FDSC)
  Else If InStr(sString, "[NotifySend]") Then
    aScan = Scan(Right(sString, Len(sString) - InStr(sString, "]")), "*|*|*")
    If aScan.Count = 3 Then Exec ["/usr/bin/notify-send", aScan[0], aScan[1], "-i", aScan[2]]
  Else If InStr(sString, "[PLCBUSStatus]") Then
    If FToolsPLCBUSCmdr.Visible Then FToolsPLCBUSCmdr.txtStatus.Text = Right(sString, Len(sString) - InStr(sString, "]"))
