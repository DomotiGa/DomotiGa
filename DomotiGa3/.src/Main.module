'--- convert Date from SQL to Application Format ---
Public Function DateFromSqlToApp(StrDate As String) As String

  Return (Mid(StrDate, 7, 2) & "/" & Mid(StrDate, 5, 2) & "/" & Mid(StrDate, 1, 4))

End

