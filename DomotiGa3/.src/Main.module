' returns part of a string, based on the requested item number, and the split character
Public Function ParseTag(sTag As String, iRequestItem As Integer, sSplitChar As String) As String

  ' declare variables
  Dim iX, iY As Integer
  Dim sTmp As String

  iY = 0
  For iX = 1 To Len(sTag)
    If Mid(sTag, iX, 1) = sSplitChar Then
      Inc iY
    Endif
    If iY = iRequestItem - 1 And Mid(sTag, iX, 1) <> sSplitChar Then
      sTmp &= Mid(sTag, iX, 1)
    Endif
  Next
  Return sTmp

End

'--- retrieve BLOB from an existing Record ! ---
Public Function BlobFromDB(StrQuery As String, StrBLOBField As String, StrEXTField As String) As String

  '--- declare variables ----
  Dim StrTmpFile, StrTmpResult As String
  Dim rRes As Result

  rRes = Main.hDB.EXEC(StrQuery)
  If rRes Then
    If rRes.Count > 0 Then
      rRes.MoveFirst
      StrTmpFile = Temp() & "." & Rres[StrEXTField]
      StrTmpResult = rRes[StrBLOBField].Data
      File.Save(StrTmpFile, StrTmpResult)
      Return StrTmpFile
    Endif
  Endif

