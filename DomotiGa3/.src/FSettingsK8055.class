PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtPolltime.Text = Main.iK8055Polltime
  chkDebug.Value = Main.bK8055Debug
  chkEnabled.Value = Main.bK8055Enabled
  cmbBoardAddress.Text = Main.iK8055BoardAddress
  txtDebounceTime1.Text = Main.iK8055DebounceTime1
  txtDebounceTime2.Text = Main.iK8055DebounceTime2
  btnSave.Enabled = FALSE

  IF Main.bK8055Enabled = FALSE THEN
    txtPolltime.Enabled = FALSE
    cmbBoardAddress.Enabled = FALSE
    txtDebounceTime1.Enabled = FALSE
    txtDebounceTime2.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new K8055 settings
  rResult = Main.hDB.Exec("UPDATE settings_k8055 SET debug = &1, polltime = &2, boardaddress = &3, debouncetime1 = &4, debouncetime2 = &5, enabled = &6 WHERE id = 1", chkDebug.Value, txtPolltime.Text, cmbBoardAddress.Text, txtdebouncetime1.Text, txtdebouncetime2.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("k8055") ' reload settings
  IF rResult.Count THEN
    Main.bK8055Enabled = rResult!enabled
    Main.iK8055PollTime = rResult!polltime
    Main.iK8055BoardAddress = rResult!boardaddress
    Main.iK8055DebounceTime1 = rResult!debouncetime1
    Main.iK8055DebounceTime2 = rResult!debouncetime2
    Main.bK8055Debug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_K8055()
  ELSE
    XMLClient.ModuleRestart("K8055")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("k8055", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtPolltime.Text = rResult!polltime
    cmbBoardAddress.Text = rResult!addressboard
    txtdebouncetime1.Text = rResult!DebounceTime1
    txtdebouncetime2.Text = rResult!DebounceTime2
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtPolltime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  cmbBoardAddress.Enabled = chkEnabled.Value
  txtDebounceTime1.Enabled = chkEnabled.Value
  txtDebounceTime2.Enabled = chkEnabled.Value

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtPolltime_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtDebounceTime1_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtDebounceTime2_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB cmbAddressBoard_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB cmbBoardAddress_Click()

  btnSave.Enabled = TRUE

END
