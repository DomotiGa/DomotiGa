Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  txtSerialPort.Text = Main.sJeeLabsSerialPort
  cmbBaudrate.Text = Main.sJeeLabsBaudrate
  chkDebug.Value = Main.bJeeLabsDebug
  chkEnabled.Value = Main.bJeeLabsEnabled
  btnSave.Enabled = False

  If Main.bJeeLabsEnabled = False Then
    txtSerialPort.Enabled = False
    cmbBaudrate.Enabled = False
    chkDebug.Enabled = False
  End If

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub txtSerialPort_KeyPress()

  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new JeeLabs settings
  rResult = Main.hDB.Exec("UPDATE settings_jeelabs SET debug = &1, serialport = &2, baudrate = &3, enabled = &4 WHERE id = 1", chkDebug.Value, txtSerialPort.Text, cmbBaudrate.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("jeelabs") ' reload settings
  If rResult.Count Then
    Main.bJeeLabsEnabled = rResult!enabled
    Main.sJeeLabsSerialPort = rResult!serialport
    Main.sJeeLabsBaudrate = rResult!baudrate
    Main.bJeeLabsDebug = rResult!debug
  End If
  If Main.bServer Then
    Main.Restart_JeeLabs()
  Else
    XMLClient.ModuleRestart("JeeLabs")
  End If
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("jeelabs", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    txtSerialPort.text = rResult!serialport
    cmbBaudrate.Text = rResult!baudrate
    chkDebug.Value = rResult!debug
  End If
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtSerialPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  cmbBaudrate.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End

Public Sub cmbBaudrate_Click()

  btnSave.Enabled = True

End
