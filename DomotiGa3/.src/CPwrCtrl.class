END

PRIVATE FUNCTION PwrCtrlDebug_Read() AS Boolean

  RETURN bPwrCtrlDebug

END

PRIVATE SUB PwrCtrlDebug_Write(Value AS Boolean)

  bPwrCtrlDebug = Value

END
