PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  chkEnabled.Value = Main.bPingEnabled
  vbPollTime.Value = Main.iPingPollTime
  chkDebug.Value = Main.bPingDebug
  vbPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = FALSE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  IF NOT FMain.MinValue(ME.vbPollTime, 60) THEN RETURN

  ' save new Ping settings
  rResult = Main.hDB.Exec("UPDATE settings_ping SET debug = &1, enabled = &2, polltime = &3 WHERE id = 1", chkDebug.Value, chkEnabled.Value, vbPollTime.Value)
  rResult = Main.GetSettingTable("ping") ' reload settings
  IF rResult.Count THEN
    Main.bPingEnabled = rResult!enabled
    Main.iPingPollTime = rResult!polltime
    Main.bPingDebug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_Ping()
  ELSE
    XMLClient.ModuleRestart("Ping")
  END IF
  ME.Close

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB chkEnabled_Click()

  vbPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("ping", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    vbPollTime.Value = rResult!polltime
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB vbPollTime_Change()

  btnSave.Enabled = TRUE

END
