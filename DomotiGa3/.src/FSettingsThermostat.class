PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  LoadSettings()
  btnSave.Enabled = FALSE

  IF Main.bThermostatEnabled = FALSE THEN chkDebug.Enabled = FALSE

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' validate input
  IF vbPolltime.Value = NULL THEN
    vbPolltime.Value = 0
  ENDIF

  ' save new thermostat settings
  rResult = Main.hDB.Exec("UPDATE settings_thermostat SET debug = &1, enabled = &2, polltime=&3 WHERE id = 1", chkDebug.Value, chkEnabled.Value, vbPolltime.value)
  LoadSettings()
  IF Main.bServer THEN
    Main.Restart_Thermostat()
  ELSE
    XMLClient.ModuleRestart("Thermostat")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("thermostat", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB LoadSettings()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("thermostat") ' reload settings
  IF rResult.Count THEN
    Main.bThermostatEnabled = rResult!enabled
    Main.bThermostatDebug = rResult!debug
    Main.iThermostatPolltime = rResult!polltime
  END IF
  chkDebug.Value = Main.bThermostatDebug
  chkEnabled.Value = Main.bThermostatEnabled
  vbPolltime.value = Main.iThermostatPolltime

END

PUBLIC SUB vbPolltime_Change()

  btnSave.Enabled = TRUE

END
