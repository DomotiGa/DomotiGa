PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtTCPHost.Text = Main.sELVMAXTCPHost
  txtTCPPort.Text = Main.iELVMAXTCPPort
  chkDebug.Value = Main.bELVMAXDebug
  chkEnabled.Value = Main.bELVMAXEnabled
  btnSave.Enabled = FALSE

  IF Main.bELVMAXEnabled = FALSE THEN
    txtTCPHost.Enabled = FALSE
    txtTCPPort.Enabled = FALSE
    chkDebug.Enabled = FALSE
  ENDIF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new ELV MAX! settings
  rResult = Main.hDB.Exec("UPDATE settings_elvmax SET debug = &1, tcphost = &2, tcpport = &3, enabled = &4 WHERE id = 1", chkDebug.Value, txtTCPHost.Text, txtTCPPort.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("elvmax") ' reload settings
  IF rResult.Count THEN
    Main.bELVMAXEnabled = rResult!enabled
    Main.sELVMAXTCPHost = rResult!tcphost
    Main.iELVMAXTCPPort = rResult!tcpport
    Main.bELVMAXDebug = rResult!debug
  ENDIF
  IF Main.bServer THEN
    Main.Restart_ELVMAX()
  ELSE
    XMLClient.ModuleRestart("ELVMAX")
  ENDIF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("elvmax", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtTCPPort.Text = rResult!tcpport
    txtTCPHost.Text = rResult!tcphost
    chkDebug.Value = rResult!debug
  ENDIF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPHost_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPPort_KeyPress()

  btnSave.Enabled = TRUE

END
