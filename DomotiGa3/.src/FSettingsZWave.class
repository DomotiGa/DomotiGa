PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtSerialPort.Text = Main.sZWaveSerialPort
  chkDebug.Value = Main.bZWaveDebug
  chkEnabled.Value = Main.bZWaveEnabled
  vbPolltime.Value = Main.iZWavePollTime
  txtPolltimeListening.Text = Main.sZWavePollTimeListening
  txtPolltimeSleeping.Text = Main.sZWavePollTimeSleeping
  txtUpdateNeighbor.Text = Main.sZWaveUpdateNeighbor
  chkEnablePollSleeping.Value = Main.bZWaveEnablePollSleeping
  chkEnablePollListening.Value = Main.bZWaveEnablePollListening
  chkEnableUpdateNeighbor.Value = Main.bZWaveEnableUpdateNeighbor
  btnSave.Enabled = FALSE

  IF txtPolltimeListening.Text = "" THEN txtPolltimeListening.Text = "*/30 * * * *"
  IF txtPolltimeSleeping.Text = "" THEN txtPolltimeSleeping.Text = "*/30 * * * *"

  IF Main.bZWaveEnabled = FALSE THEN
    txtSerialPort.Enabled = FALSE
    chkDebug.Enabled = FALSE
    vbPolltime.Enabled = FALSE
    txtPolltimeListening.Enabled = FALSE
    txtPolltimeSleeping.Enabled = FALSE
    txtUpdateNeighbor.Enabled = FALSE
    chkEnablePollListening.Enabled = FALSE
    chkEnablePollSleeping.Enabled = FALSE
    chkEnableUpdateNeighbor.Enabled = FALSE
  END IF

END

