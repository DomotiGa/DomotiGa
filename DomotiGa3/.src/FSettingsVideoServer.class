PUBLIC SUB txtChannel1_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtChannel2_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtChannel3_KeyPress()

  btnSave.Enabled = TRUE

END

