PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtTCPPort.Text = Main.iVideoServerPort
  txtTCPHost.Text = Main.sVideoServerAddress
  chkDebug.Value = Main.bVideoServerDebug
  chkEnabled.Value = Main.bVideoServerEnabled
  txtUser.Text = Main.sVideoServerUser
  txtPassword.Text = Main.sVideoServerPassword
  txtChannel1.Text = Main.sVideoServerChannel1
  txtChannel2.Text = Main.sVideoServerChannel2
  txtChannel3.Text = Main.sVideoServerChannel3
  txtChannel4.Text = Main.sVideoServerChannel4
  btnSave.Enabled = FALSE

  IF Main.bVideoServerEnabled = FALSE THEN
    txtTCPPort.Enabled = FALSE
    txtTCPHost.Enabled = FALSE
    txtUser.Enabled = FALSE
    txtPassword.Enabled = FALSE
    txtChannel1.Enabled = FALSE
    txtChannel2.Enabled = FALSE
    txtChannel3.Enabled = FALSE
    txtChannel4.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtTCPHost_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPPort_KeyPress()

  btnSave.Enabled = TRUE

