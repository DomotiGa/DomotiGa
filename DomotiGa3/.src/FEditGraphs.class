Public Sub CheckMissingGraphName() As Boolean

  If Len(ComboBoxGraph_name.Text) = 0 Then
    ComboBoxGraph_name.SetFocus
    Balloon("Graph name missing!", ComboBoxGraph_name,, 50, 10)
    Return False
  Else
    Return True
  Endif

End

