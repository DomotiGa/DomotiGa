Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  txtSMTPServer.Text = Main.sEmailSMTPServer
  txtSMTPPort.Text = Main.iEmailSMTPPort
  txtFromAddress.Text = Main.sEmailFromAddress
  txtToAddress.Text = Main.sEmailToAddress
  chkDebug.Value = Main.bEmailDebug
  chkEnabled.Value = Main.bEmailEnabled

  If Main.bEmailEnabled = False Then
    txtSMTPServer.Enabled = False
    txtSMTPPort.Enabled = False
    txtFromAddress.Enabled = False
    txtToAddress.Enabled = False
    chkDebug.Enabled = False
    btnTest.Enabled = False
  Endif
  btnSave.Enabled = False

End

Public Sub ButtonCancel_Click()

  Me.Close

End

Public Sub txtSMTPServer_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtSMTPPort_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtFromAddress_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtToAddress_KeyPress()

  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtSMTPServer.Enabled = chkEnabled.Value
  txtSMTPPort.Enabled = chkEnabled.Value
  txtFromAddress.Enabled = chkEnabled.Value
  txtToAddress.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnTest.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("email", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    txtSMTPServer.Text = rResult!smtpserver
    txtSMTPPort.Text = rResult!smtpport
    txtFromAddress.text = rResult!fromaddress
    txtToAddress.text = rResult!toaddress
    chkDebug.Value = rResult!debug
  Endif
  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new E-Mail settings
  rResult = Main.hDB.Exec("UPDATE settings_email SET debug = &1, enabled = &2, smtpserver = &3, smtpport = &4, fromaddress= &5, toaddress = &6 WHERE id = 1", chkDebug.Value, chkEnabled.Value, txtSMTPServer.Text, txtSMTPPort.Text, txtFromAddress.text, txtToAddress.Text)
  rResult = Main.GetSettingTable("email") ' reload settings
  If rResult.Count Then
    Main.bEmailEnabled = rResult!enabled
    Main.sEmailSMTPServer = rResult!smtpserver
    Main.iEmailSMTPPort = rResult!smtpport
    Main.sEmailFromAddress = rResult!fromaddress
    Main.sEmailToAddress = rResult!toaddress
    Main.bEmailDebug = rResult!debug
  Endif
  If Main.bServer Then
    Main.Restart_Email()
  Else
    XMLClient.ModuleRestart("Email")
  Endif
  Me.Close

End

Public Sub btnTest_Click()

  If Main.bServer Then
    Mail.SendMail(("DomotiGa: Test e-mail"), ("If you read this, e-mail support is working!"), Main.sEmailToAddress)
  Else
    XMLClient.SendEmail(Main.sEmailToAddress, ("DomotiGa: Test e-mail"), ("If you read this, e-mail support is working!"))
  End If

End
