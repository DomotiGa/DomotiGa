Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  ScreenFunc.InitFilterscreen(Me)
  ScreenFunc.SetButtons(Me.tag, Me.ColVw, Me.FrameCommand)

  ' display full list by default
  ScreenFunc.FilterData(Me.FrameFilter, Me.ColVw, Me.FrameCommand, Me.BtnFilter, Me.FrameResults)

End

Public Sub BtnFilter_Click()

  ScreenFunc.FilterData(Me.FrameFilter, Me.ColVw, Me.FrameCommand, Me.BtnFilter, Me.FrameResults)
  ScreenFunc.SetButtons(Me.tag, Me.ColVw, Me.FrameCommand)

End

Public Sub ColVw_Click()

  ScreenFunc.SetButtons(Me.tag, Me.ColVw, Me.FrameCommand)

End

Public Sub BtnAdd_Click()

  ScreenFunc.DoDetailScreen("ADD", Me.ColVw, FEditTVProgramCategoriesDetail, Me.Title)
  BtnFilter_Click

End

Public Sub BtnView_Click()

  ScreenFunc.DoDetailScreen("VIEW", Me.ColVw, FEditTVProgramCategoriesDetail, Me.Title)
  BtnFilter_Click

End

Public Sub BtnModify_Click()

  ScreenFunc.DoDetailScreen("MODIFY", Me.ColVw, FEditTVProgramCategoriesDetail, Me.Title)
  BtnFilter_Click

End

Public Sub BtnCopy_Click()

  ScreenFunc.DoDetailScreen("COPY", Me.ColVw, FEditTVProgramCategoriesDetail, Me.Title)
  BtnFilter_Click

End

Public Sub BtnDelete_Click()

  ScreenFunc.DoDetailScreen("DELETE", Me.ColVw, FEditTVProgramCategoriesDetail, Me.Title)
  BtnFilter_Click

End

Public Sub BtnPrint_Click()

  ScreenFunc.PrintFilter(Me.FrameFilter, Me.ColVw, Me.Title, Me.Tag)

End

Public Sub BtnSelect_Click()

   ScreenFunc.SetKey(ColVw, Me)

End

Public Sub ColVw_DblClick()

  ScreenFunc.DoDetailScreen("MODIFY", Me.ColVw, FEditTVProgramCategoriesDetail, Me.Title)
  BtnFilter_Click

End
