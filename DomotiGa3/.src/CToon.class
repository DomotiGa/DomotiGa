Public Sub SetState(sState As String)

  Select UCase(sState)
    Case "AWAY"
      ToonSetProgramState(3)
    Case "SLEEP"
      ToonSetProgramState(2)
    Case "HOME"
      ToonSetProgramState(1)
    Case "COMFORT"
      ToonSetProgramState(0)
    Case Else
      If $bDebug Then Main.WriteDebugLog(LogLabel & "Error unknown state command: '" & sState & "'")
  End Select

End

