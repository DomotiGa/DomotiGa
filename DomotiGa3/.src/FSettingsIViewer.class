Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  txtPassword.Text = Main.sIViewerPassword
  txtTCPPort.Text = Main.iIViewerTCPPort
  chkDebug.Value = Main.bIViewerDebug
  chkEnabled.Value = Main.bIViewerEnabled
  btnSave.Enabled = False

  If Main.bIViewerEnabled = False Then
    txtPassword.Enabled = False
    txtTCPPort.Enabled = False
    chkDebug.Enabled = False
  End If

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub txtPassword_KeyPress()

  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new IViewer settings
  rResult = Main.hDB.Exec("UPDATE settings_iviewer SET debug = &1, password = &2, enabled = &3, tcpport = &4 WHERE id = 1", chkDebug.Value, txtPassword.Text, chkEnabled.Value, txtTCPPort.Text)
  rResult = Main.GetSettingTable("iviewer") ' reload settings
  If rResult.Count Then
    Main.bIViewerEnabled = rResult!enabled
    Main.sIViewerPassword = rResult!password
    Main.iIViewerTCPPort = rResult!tcpport
    Main.bIViewerDebug = rResult!debug
  End If
  If Main.bServer Then
    Main.Restart_IViewer()
  Else
    XMLClient.ModuleRestart("iViewer")
  End If
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("iviewer", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    txtPassword.Text = rResult!password
    txtTCPPort.Text = rResult!tcpport
    chkDebug.Value = rResult!debug
  End If
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtPassword.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End

Public Sub txtTCPPort_KeyPress()

  btnSave.Enabled = True

End
