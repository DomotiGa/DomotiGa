PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtSerialPort.Text = Main.sDomoticaSerialPort
  chkDebug.Value = Main.bDomoticaDebug
  chkEnabled.Value = Main.bDomoticaEnabled
  btnSave.Enabled = FALSE

  IF Main.bDomoticaEnabled = FALSE THEN
    txtSerialPort.Enabled = FALSE
    chkDebug.Enabled = FALSE
  ENDIF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtSerialPort_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new Domotica settings
  rResult = Main.hDB.Exec("UPDATE settings_domotica SET debug = &1, serialport = &2, enabled = &3 WHERE id = 1", chkDebug.Value, txtSerialPort.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("domotica") ' reload settings
  IF rResult.Count THEN
    Main.bDomoticaEnabled = rResult!enabled
    Main.sDomoticaSerialPort = rResult!serialport
    Main.bDomoticaDebug = rResult!debug
  ENDIF
  IF Main.bServer THEN
    Main.Restart_Domotica()
  ELSE
    XMLClient.ModuleRestart("Domotica")
  ENDIF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("domotica", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtSerialPort.text = rResult!serialport
    chkDebug.Value = rResult!debug
  ENDIF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtSerialPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END
