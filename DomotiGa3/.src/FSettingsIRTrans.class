PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtTCPHost.Text = Main.sIRTransTCPHost
  txtTCPPort.Text = Main.iIRTransTCPPort
  chkDebug.Value = Main.bIRTransDebug
  chkEnabled.Value = Main.bIRTransEnabled
  btnSave.Enabled = FALSE

  IF Main.bIRTransEnabled = FALSE THEN
    txtTCPHost.Enabled = FALSE
    txtTCPPort.Enabled = FALSE
    chkDebug.Enabled = FALSE
  ENDIF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new IRTrans settings
  rResult = Main.hDB.Exec("UPDATE settings_irtrans SET debug = &1, tcphost = &2, enabled = &3, tcpport = &4 WHERE id = 1", chkDebug.Value, txtTCPHost.Text, chkEnabled.Value, txtTCPPort.Text)
  rResult = Main.GetSettingTable("irtrans") ' reload settings
  IF rResult.Count THEN
    Main.bIRTransEnabled = rResult!enabled
    Main.sIRTransTCPHost = rResult!tcphost
    Main.iIRTransTCPPort = rResult!tcpport
    Main.bIRTransDebug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_IRTrans()
  ELSE
    XMLClient.ModuleRestart("IRTrans")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("irtrans", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtTCPPort.Text = rResult!tcpport
    txtTCPHost.Text = rResult!tcphost
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPHost_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPPort_KeyPress()

  btnSave.Enabled = TRUE

END
