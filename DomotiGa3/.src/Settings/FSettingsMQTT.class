Public Sub chkSSLEnabled_Click()

  btnSave.Enabled = True
  cmbSSLCertificate.Enabled = chkSSLEnabled.Value

  If chkSSLEnabled.Value Then
    If txtTCPPort.Text = "1883" Then
      txtTCPPort.Text = "8883"
    Endif
  Else
    If txtTCPPort.Text = "8883" Then
