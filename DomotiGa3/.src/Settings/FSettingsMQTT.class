Public Sub btnSave_Click()

  Dim rResult As Result

  If $cSSLCertificate.Exist(cmbSSLCertificate.Current.Text) Then
    $iSSLCertificate = $cSSLCertificate[cmbSSLCertificate.Current.Text]
  Else
    $iSSLCertificate = 0
  Endif

  ' save new MQTT settings
  rResult = Main.hDB.Exec("UPDATE settings_mqtt SET debug = &1, tcphost = &2, tcpport = &3, username = &4, password = &5, heartbeat = &6, pubtopic = &7, subtopic = &8, enabled = &9, retain = &{10}, qos = &{11} , clientname = &{12}, enablepublish = &{13}, enablesubscribe = &{14}, sslenabled = &{15}, sslcertificate_id = &{16}, birthlastwill = &{17} WHERE id = 1", chkDebug.Value, txtTCPHost.Text, txtTCPPort.Text, txtUsername.Text, txtPassword.Text, txtHeartbeat.Text, txtPubTopic.Text, txtSubTopic.Text, chkEnabled.Value, chkRetain.Value, spQoS.Value, txtClientname.Text, chkEnablePublish.Value, chkEnableSubscribe.Value, chkSSLEnabled.Value, $iSSLCertificate, chkBirthLastWill.Value)

  If Main.bServer Then
    Plugin.Restart("MQTT", 1)
  Else
    Client.Plugin_Restart("MQTT")
  Endif

  Me.Close

End

