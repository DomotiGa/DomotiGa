Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new MQTT settings
  rResult = Main.hDB.Exec("UPDATE settings_mqtt SET debug = &1, tcphost = &2, tcpport = &3, username = &4, password = &5, heartbeat = &6, pubtopic = &7, subtopic = &8, enabled = &9, retain = &{10}, qos = &{11} WHERE id = 1", chkDebug.Value, txtTCPHost.Text, txtTCPPort.Text, txtUsername.Text, txtPassword.Text, txtHeartbeat.Text, txtPubTopic.Text, txtSubTopic.Text, chkEnabled.Value, chkRetain.Value, spQoS.Value)

  rResult = Main.GetSettingTable("mqtt") ' reload settings
  If rResult.Count Then
    Main.bMQTTEnabled = rResult!enabled
    Main.sMQTTTCPHost = rResult!tcphost
    Main.iMQTTTCPPort = rResult!tcpport
    Main.sMQTTUsername = rResult!username
    Main.sMQTTPassword = rResult!password
    Main.iMQTTHeartbeat = rResult!heartbeat
    Main.sMQTTPubTopic = rResult!pubtopic
    Main.sMQTTSubTopic = rResult!subtopic
    Main.bMQTTRetain = rResult!retain
    Main.iMQTTQoS = rResult!qos
    Main.bMQTTDebug = rResult!debug
  Endif

  If Main.bServer Then
    Main.Restart_MQTT()
  Else
    XMLClient.ModuleRestart("MQTT")
  Endif

  Me.Close

End

Public Sub btnDefaults_Click()

