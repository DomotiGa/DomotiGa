Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  cmbType.Text = Main.sRFXComTXType
  txtSerialPort.Text = Main.sRFXComTXSerialPort
  cmbBaudrate.Text = Main.sRFXComTXBaudrate
  txtTCPHost.Text = Main.sRFXComTXTCPHost
  txtTCPPort.Text = Main.iRFXComTXTCPPort
  chkDebug.Value = Main.bRFXComTXDebug
  chkHandshake.Value = Main.bRFXComTXHandshake
  chkEnabled.Value = Main.bRFXComTXEnabled
  txtRelayPort.Text = Main.iRFXComTXRelayPort
  chkRelayEnabled.Value = Main.bRFXComTXRelayEnabled
  chkDisableX10.Value = Main.bRFXComTXDisableX10
  chkEnableARC.Value = Main.bRFXComTXEnableARC
  chkEnableHarrison.Value = Main.bRFXComTXEnableHarrison
  chkEnableKoppla.Value = Main.bRFXComTXEnableKoppla
  chkRFXmitter.Value = Main.bRFXComTXRFXmitter
  btnSave.Enabled = False

  If Main.bRFXComTXEnabled = False Then
    cmbType.Enabled = False
    txtSerialPort.Enabled = False
    cmbBaudrate.Enabled = False
    txtTCPHost.Enabled = False
    txtTCPPort.Enabled = False
    chkDebug.Enabled = False
    chkHandshake.Enabled = False
    txtRelayPort.Enabled = False
    chkRelayEnabled.Enabled = False
    chkDisableX10.Enabled = False
    chkEnableARC.Enabled = False
    chkEnableHarrison.Enabled = False
    chkEnableKoppla.Enabled = False
    chkRFXmitter.Enabled = False
  Else
    SetButtons()
    SetProtocols()
  Endif

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new RFXCom settings
  rResult = Main.hDB.Exec("UPDATE settings_rfxcomtx SET debug = &1, type = &2, serialport = &3, baudrate = &4, tcphost = &5, enabled = &6, tcpport = &7, relayport = &8, relayenabled = &9, handshake = &{10}, disablex10 = &{11}, enablearc = &{12}, enableharrison = &{13}, enablekoppla = &{14}, rfxmitter = &{15} WHERE id = 1", chkDebug.Value, cmbType.Text, txtSerialPort.Text, cmbBaudrate.Text, txtTCPHost.Text, chkEnabled.Value, txtTCPPort.Text, txtRelayPort.Text, chkRelayEnabled.Value, chkHandshake.Value, chkDisableX10.Value, chkEnableARC.Value, chkEnableHarrison.Value, chkEnableKoppla.Value, chkRFXmitter.Value)
  rResult = Main.GetSettingTable("rfxcomtx") ' reload settings
  If rResult.Count Then
    Main.bRFXComTXEnabled = rResult!enabled
    Main.sRFXComTXSerialPort = rResult!serialport
    Main.sRFXComTXBaudrate = rResult!baudrate
    Main.sRFXComTXTCPHost = rResult!tcphost
    Main.iRFXComTXTCPPort = rResult!tcpport
    Main.sRFXComTXType = rResult!type
    Main.bRFXComTXDebug = rResult!debug
    Main.bRFXComTXHandshake = rResult!handshake
    Main.iRFXComTXRelayPort = rResult!relayport
    Main.bRFXComTXRelayEnabled = rResult!relayenabled
    Main.bRFXComTXDisableX10 = rResult!disablex10
    Main.bRFXComTXEnableARC = rResult!enablearc
    Main.bRFXComTXEnableHarrison = rResult!enableharrison
    Main.bRFXComTXEnableKoppla = rResult!enablekoppla
    Main.bRFXComTXRFXmitter = rResult!rfxmitter
  Endif
  If Main.bServer Then
    Main.Restart_RFXComTX()
  Else
    XMLClient.ModuleRestart("RFXComTX")
  Endif
  FMain.UpdateStatusPanel()
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("rfxcomtx", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    txtSerialPort.Text = rResult!serialport
    txtTCPPort.Text = rResult!tcpport
    txtTCPHost.Text = rResult!tcphost
    cmbType.Text = rResult!type
    cmbBaudrate.Text = rResult!baudrate
    chkDebug.Value = rResult!debug
    chkHandshake.Value = rResult!handshake
    chkRelayEnabled.Value = rResult!relayenabled
    txtRelayPort.Text = rResult!relayport
    chkDisableX10.Value = rResult!disablex10
    chkEnableARC.Value = rResult!enablearc
    chkEnableHarrison.Value = rResult!enableharrison
    chkEnableKoppla.Value = rResult!enablekoppla
    chkRFXmitter.Value = rResult!rfxmitter
  Endif
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtSerialPort.Enabled = chkEnabled.Value
  cmbBaudrate.Enabled = chkEnabled.Value
  cmbType.Enabled = chkEnabled.Value
  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  chkHandshake.Enabled = chkEnabled.Value
  txtRelayPort.Enabled = chkEnabled.Value
  chkRelayEnabled.Enabled = chkEnabled.Value
  chkDisableX10.Enabled = chkEnabled.Value
  chkEnableARC.Enabled = chkEnabled.Value
  chkEnableHarrison.Enabled = chkEnabled.Value
  chkEnableKoppla.Enabled = chkEnabled.Value
  chkRFXmitter.Enabled = chkEnabled.Value
  If chkEnabled.Value Then SetButtons()

End

Private Sub SetButtons()

  If cmbType.Text = "tcp" Then
    txtSerialPort.Enabled = False
    cmbBaudrate.Enabled = False
    txtTCPHost.Enabled = True
    txtTCPPort.Enabled = True
  Endif
  If cmbType.Text = "serial" Then
    txtSerialPort.Enabled = True
    cmbBaudrate.Enabled = True
    txtTCPHost.Enabled = False
    txtTCPPort.Enabled = False
  Endif
  btnSave.Enabled = True
  txtRelayPort.Enabled = chkRelayEnabled.Value

End

Private Sub SetProtocols()

  If chkRFXmitter.Value Then
    chkDisableX10.Enabled = False
    chkEnableARC.Enabled = False
    chkEnableHarrison.Enabled = False
    chkEnableKoppla.Enabled = False
  Else
    chkDisableX10.Enabled = True
    chkEnableARC.Enabled = True
    chkEnableHarrison.Enabled = True
    chkEnableKoppla.Enabled = True
  Endif

End


