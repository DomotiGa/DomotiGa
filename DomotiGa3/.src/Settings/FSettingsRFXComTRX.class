Public Sub btnSave_Click()

  ' save new RFXCom settings
  Main.hDB.Exec("UPDATE settings_rfxcomtrx SET debug = &1, type = &2, serialport = &3, baudrate = &4, tcphost = &5, enabled = &6, tcpport = &7, relayport = &8, relayenabled = &9, globalx10 = &{10}, oldaddrfmt = &{11} WHERE id = 1", chkDebug.Value, cmbType.Text, txtSerialPort.Text, cmbBaudrate.Text, txtTCPHost.Text, chkEnabled.Value, txtTCPPort.Text, txtRelayPort.Text, chkRelayEnabled.Value, chkGlobalX10.Value, chkOldAddrFmt.Value)

  If Main.bServer Then
    Plugin.Restart("RFXComTRX", 1)
  Else
    XMLClient.ModuleRestart("RFXComTRX")
  Endif

  FMain.UpdateStatusPanel()
  Me.Close

End

