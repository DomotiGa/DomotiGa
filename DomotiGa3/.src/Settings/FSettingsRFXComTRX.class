Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  cmbType.Text = Main.sRFXComTRXType
  txtSerialPort.Text = Main.sRFXComTRXSerialPort
  cmbBaudrate.Text = Main.sRFXComTRXBaudrate
  txtTCPHost.Text = Main.sRFXComTRXTCPHost
  txtTCPPort.Text = Main.iRFXComTRXTCPPort
  chkDebug.Value = Main.bRFXComTRXDebug
  chkEnabled.Value = Main.bRFXComTRXEnabled
  txtRelayPort.Text = Main.iRFXComTRXRelayPort
  chkRelayEnabled.Value = Main.bRFXComTRXRelayEnabled
  chkGlobalX10.Value = Main.bRFXComTRXGlobalX10
  chkOldAddrFmt.Value = Main.bRFXComTRXOldAddrFmt
  btnSave.Enabled = False

  If Main.bRFXComTRXEnabled = False Then
    cmbType.Enabled = False
    txtSerialPort.Enabled = False
    cmbBaudrate.Enabled = False
    txtTCPHost.Enabled = False
    txtTCPPort.Enabled = False
    chkDebug.Enabled = False
    txtRelayPort.Enabled = False
    chkRelayEnabled.Enabled = False
    chkGlobalX10.Enabled = False
    chkOldAddrFmt.Enabled = False
  Else
    SetButtons()
  Endif

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub txtSerialPort_KeyPress()

  btnSave.Enabled = True

End

Public Sub cmbBaudrate_Click()

  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub chkGlobalX10_Click()

  btnSave.Enabled = True

End

Public Sub txtRelayPort_KeyPress()

  btnSave.Enabled = True

End

Public Sub chkRelayEnabled_Click()

  btnSave.Enabled = True
  txtRelayPort.Enabled = chkRelayEnabled.Value

End

Public Sub chkOldAddrFmt_Click()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new RFXCom settings
  rResult = Main.hDB.Exec("UPDATE settings_rfxcomtrx SET debug = &1, type = &2, serialport = &3, baudrate = &4, tcphost = &5, enabled = &6, tcpport = &7, relayport = &8, relayenabled = &9, globalx10 = &{10}, oldaddrfmt = &{11} WHERE id = 1", chkDebug.Value, cmbType.Text, txtSerialPort.Text, cmbBaudrate.Text, txtTCPHost.Text, chkEnabled.Value, txtTCPPort.Text, txtRelayPort.Text, chkRelayEnabled.Value, chkGlobalX10.Value, chkOldAddrFmt.Value)
  rResult = Main.GetSettingTable("rfxcomtrx") ' reload settings
  If rResult.Count Then
    Main.bRFXComTRXEnabled = rResult!enabled
    Main.sRFXComTRXSerialPort = rResult!serialport
    Main.sRFXComTRXBaudrate = rResult!baudrate
    Main.sRFXComTRXTCPHost = rResult!tcphost
    Main.iRFXComTRXTCPPort = rResult!tcpport
    Main.sRFXComTRXType = rResult!type
    Main.bRFXComTRXDebug = rResult!debug
    Main.iRFXComTRXRelayPort = rResult!relayport
    Main.bRFXComTRXRelayEnabled = rResult!relayenabled
    Main.bRFXComTRXGlobalX10 = rResult!globalx10
    Main.bRFXComTRXOldAddrFmt = rResult!oldaddrfmt
  Endif
  If Main.bServer Then
    Main.Restart_RFXComTRX()
  Else
    XMLClient.ModuleRestart("RFXComTRX")
  Endif
  FMain.UpdateStatusPanel()
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("rfxcomtrx", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    txtSerialPort.Text = rResult!serialport
    txtTCPPort.Text = rResult!tcpport
    txtTCPHost.Text = rResult!tcphost
    cmbType.Text = rResult!type
    cmbBaudrate.Text = rResult!baudrate
    chkDebug.Value = rResult!debug
    chkRelayEnabled.Value = rResult!relayenabled
    chkGlobalX10.Value = rResult!globalx10
    txtRelayPort.Text = rResult!relayport
    chkOldAddrFmt.Value = rResult!oldaddrfmt
  Endif
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtSerialPort.Enabled = chkEnabled.Value
  cmbBaudrate.Enabled = chkEnabled.Value
  cmbType.Enabled = chkEnabled.Value
  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  txtRelayPort.Enabled = chkEnabled.Value
  chkRelayEnabled.Enabled = chkEnabled.Value
  chkGlobalX10.Enabled = chkEnabled.Value
  chkOldAddrFmt.Enabled = chkEnabled.Value
  btnSave.Enabled = True
  If chkEnabled.Value Then SetButtons()

End

Public Sub SetButtons()

  If cmbType.Text = "tcp" Then
    txtSerialPort.Enabled = False
    cmbBaudrate.Enabled = False
    txtTCPHost.Enabled = True
    txtTCPPort.Enabled = True
  Endif
  If cmbType.Text = "serial" Then
    txtSerialPort.Enabled = True
    cmbBaudrate.Enabled = True
    txtTCPHost.Enabled = False
    txtTCPPort.Enabled = False
  Endif
  txtRelayPort.Enabled = chkRelayEnabled.Value

End

Public Sub cmbType_Click()

  If chkEnabled.Value Then SetButtons()
  btnSave.Enabled = True

End

Public Sub txtTCPHost_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtTCPPort_KeyPress()

  btnSave.Enabled = True

End
