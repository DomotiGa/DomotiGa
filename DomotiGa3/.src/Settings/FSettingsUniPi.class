Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  ' TODO: add more instances
  If LoadSettings(1) = False Then
    ' TODO: Handle problems
    Try Me.Close
    Return
  Endif

  EnableDisableSettings()
  btnSave.Enabled = False

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' Load table row
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Private Sub LoadSettings(iRow As Integer) As Boolean

  Dim rResult As Result

  rResult = Plugin.GetSettingsTable("settings_unipi", iRow)

  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    txtTCPHost.Text = rResult!tcphost
    txtTCPPort.Text = rResult!tcpport
    chkSSL.Value = rResult!sslenabled
    chkDebug.Value = rResult!debug

    Return True
  Else
    Return False
  Endif

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' Enable/Disable all input fields depending on enable value
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Private Sub EnableDisableSettings()

  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  chkSSL.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  ' save new UniPi settings
  Main.hDB.Exec("UPDATE settings_unipi SET enabled = &1, tcphost = &2, tcpport = &3, sslenabled = &4, debug = &5 WHERE id = 1", chkEnabled.Value, txtTCPHost.Text, txtTCPPort.Text, chkSSL.Value, chkDebug.Value)

  If Main.bServer Then
    Plugin.Restart("UniPi", 1)
  Else
    Client.Plugin_Restart("UniPi")
  Endif

  Me.Close

End

Public Sub btnDefaults_Click()

  LoadSettings(0)
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  chkSSL.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End

Public Sub txtTCPHost_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtTCPPort_KeyPress()

  btnSave.Enabled = True

End

Public Sub chkSSL_Click()

  btnSave.Enabled = True

End

