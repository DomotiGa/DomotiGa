Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  cmbType.Text = Main.sGenericIOType
  txtTCPHost.Text = Main.sGenericIOTCPHost
  txtTCPPort.Text = Main.iGenericIOTCPPort
  txtSerialPort.Text = Main.sGenericIOSerialPort
  cmbBaudrate.Text = Main.sGenericIOBaudrate
  chkDebug.Value = Main.bGenericIODebug
  chkEnabled.Value = Main.bGenericIOEnabled
  txtRegex.Text = Main.sGenericIORegex
  txtDelimiter.Text = Main.sGenericIODelimiter
  btnSave.Enabled = False

  If Main.bGenericIOEnabled = False Then
    cmbType.Enabled = False
    txtTCPHost.Enabled = False
    txtTCPPort.Enabled = False
    txtSerialPort.Enabled = False
    cmbBaudrate.Enabled = False
    chkDebug.Enabled = False
    txtRegex.Enabled = False
    txtDelimiter.Enabled = False
  Endif

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub txtSerialPort_KeyPress()

  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new GenericIO settings
  rResult = Main.hDB.Exec("UPDATE settings_genericio SET debug = &1, type = &2, tcphost = &3, tcpport = &4, serialport = &5, baudrate = &6, enabled = &7, regex = &8, delimiter = &9 WHERE id = 1", chkDebug.Value, cmbType.Text, txtTCPHost.Text, txtTCPPort.Text, txtSerialPort.Text, cmbBaudrate.Text, chkEnabled.Value, txtRegex.Text, txtDelimiter.Text)
  rResult = Main.GetSettingTable("genericio") ' reload settings
  If rResult.Count Then
    Main.sGenericIOType = rResult!type
    Main.bGenericIOEnabled = rResult!enabled
    Main.sGenericIOTCPHost = rResult!tcphost
    Main.iGenericIOTCPPort = rResult!tcpport
    Main.sGenericIOSerialPort = rResult!serialport
    Main.sGenericIOBaudrate = rResult!baudrate
    Main.bGenericIODebug = rResult!debug
    Main.sGenericIORegex = rResult!regex
    Main.sGenericIODelimiter = rResult!delimiter
  Endif
  If Main.bServer Then
    Main.Restart_GenericIO()
  Else
    XMLClient.ModuleRestart("GenericIO")
  Endif
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("genericio", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    cmbType.Text = rResult!type
    txtTCPPort.Text = rResult!tcpport
    txtTCPHost.Text = rResult!tcphost
    txtSerialPort.text = rResult!serialport
    cmbBaudrate.Text = rResult!baudrate
    chkDebug.Value = rResult!debug
    txtRegex.Text = rResult!regex
    txtDelimiter.Text = rResult!delimiter
    txtInputTest.Text = "R2=1"
    txtDeviceAddress.Text = "|R1=|R2=|R3=|R4=|" 
    txtAddressMatch.Text = ""
    txtValue1.Text = ""
    txtValue2.Text = ""
    txtValue3.Text = ""
    txtValue4.Text = ""
    txtBattery.Text = ""  
    btnTest.Enabled = True
  Endif
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  cmbType.Enabled = chkEnabled.Value
  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  txtSerialPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  cmbBaudrate.Enabled = chkEnabled.Value
  btnSave.Enabled = True
  txtRegex.Enabled = chkEnabled.Value
  txtDelimiter.Enabled = chkEnabled.Value
  If chkEnabled.Value Then SetButtons()

End

Public Sub SetButtons()

  If cmbType.Text = "tcp" Then
    txtSerialPort.Enabled = False
    cmbBaudrate.Enabled = False
    txtTCPHost.Enabled = True
    txtTCPPort.Enabled = True
  Endif
  If cmbType.Text = "serial" Then
    txtSerialPort.Enabled = True
    cmbBaudrate.Enabled = True
    txtTCPHost.Enabled = False
    txtTCPPort.Enabled = False
  Endif

End

Public Sub cmbType_Click()

  If chkEnabled.Value Then SetButtons()
  btnSave.Enabled = True

End

