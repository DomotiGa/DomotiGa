Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  chkEnabled.Value = Main.bMeteohubEnabled
  txtFetchURL.Text = Main.sMeteohubFetchURL
  txtPolltime.Text = Main.iMeteohubPolltime
  chkDebug.Value = Main.bMeteohubDebug
  btnSave.Enabled = False

  If Main.bMeteohubEnabled = False Then
    txtFetchURL.Enabled = False
    txtPolltime.Enabled = False
    chkDebug.Enabled = False
  End If

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub txtFetchURL_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtPolltime_KeyPress()

  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new Meteohub settings
  rResult = Main.hDB.Exec("UPDATE settings_meteohub SET debug = &1, fetchurl = &2, polltime = &3, enabled = &4  WHERE id = 1", chkDebug.Value, txtFetchURL.Text, txtPolltime.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("meteohub") ' reload settings
  If rResult.Count Then
    Main.bMeteohubEnabled = rResult!enabled
    Main.sMeteohubFetchURL = rResult!fetchurl
    Main.iMeteohubPolltime = rResult!polltime
    Main.bMeteohubDebug = rResult!debug
  End If
  If Main.bServer Then
    Main.Restart_Meteohub()
  Else
    XMLClient.ModuleRestart("Meteohub")
  End If
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("meteohub", True) ' get defaults

  chkEnabled.Value = rResult!enabled
  txtFetchURL.Text = rResult!fetchurl
  txtPolltime.Text = rResult!polltime
  chkDebug.Value = rResult!debug

  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtFetchURL.Enabled = chkEnabled.Value
  txtPolltime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End
