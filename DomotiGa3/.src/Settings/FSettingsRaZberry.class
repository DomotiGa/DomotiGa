Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  txtTCPHost.Text = Main.sRaZberryTCPHost
  txtTCPPort.Text = Main.iRaZberryTCPPort
  chkDebug.Value = Main.bRaZberryDebug
  chkEnabled.Value = Main.bRaZberryEnabled
  txtUsername.Text = Main.sRaZberryUsername
  txtPassword.Text = Main.sRaZberryPassword
  spPollTime.Value = Main.iRaZberryPollTime
  btnSave.Enabled = False

  If Main.bRaZberryEnabled = False Then
    txtTCPPort.Enabled = False
    txtTCPHost.Enabled = False
    txtUsername.Enabled = False
    txtPassword.Enabled = False
    spPollTime.Enabled = False
    txtLink.Enabled = False
    chkDebug.Enabled = False
  Endif

End

Private Sub ContructLink() As String

  If Main.sRaZberryUsername Then
    Return "http://" & Main.sRaZberryUsername & ":" & Main.sRaZberryPassword & "@" & Main.sRaZberryTCPHost & ":" & Main.iRaZberryTCPPort
  Else
    Return "http://" & Main.sRaZberryTCPHost & ":" & Main.iRaZberryTCPPort
  Endif

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub spPollTime_Change()

  btnSave.Enabled = True

End

Public Sub txtUsername_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtPassword_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtTCPHost_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtTCPPort_KeyPress()

  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new RaZberry settings
  rResult = Main.hDB.Exec("UPDATE settings_razberry SET debug = &1, tcphost = &2, tcpport = &3, username = &4, password = &5, polltime = &6, enabled = &7 WHERE id = 1", chkDebug.Value, txtTCPHost.Text, txtTCPPort.Text, txtUsername.Text, txtPassword.Text, spPollTime.Value, chkEnabled.Value)
  rResult = Main.GetSettingTable("razberry") ' reload settings
  If rResult.Count Then
    Main.bRaZberryEnabled = rResult!enabled
    Main.sRaZberryTCPHost = rResult!tcphost
    Main.iRaZberryTCPPort = rResult!tcpport
    Main.sRaZberryUsername = rResult!username
    Main.sRaZberryPassword = rResult!password
    Main.iRaZberryPollTime = rResult!polltime
    Main.bRaZberryDebug = rResult!debug
  Endif
  If Main.bServer Then
    Main.Restart_RaZberry()
  Else
    XMLClient.ModuleRestart("RaZberry")
  Endif
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("razberry", True) ' get defaults

  chkEnabled.Value = rResult!enabled
  txtTCPHost.Text = rResult!tcphost
  txtTCPPort.Text = rResult!tcpport
  txtUsername.Text = rResult!username
  txtPassword.Text = rResult!password
  spPollTime.Value = rResult!polltime
  chkDebug.Value = rResult!debug
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  txtUsername.Enabled = chkEnabled.Value
  txtPassword.Enabled = chkEnabled.Value
  spPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  txtLink.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End

Public Sub txtLink_MouseUp()

  Print ContructLink()

  Desktop.Open(ContructLink())

End
