Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  chkEnabled.Value = Main.bOWFSEnabled
  vbPollTime.Value = Main.iOWFSPollTime
  chkDebug.Value = Main.bOWFSDebug
  txtBaseDir.Text = Main.sOWFSBaseDir
  chkCached.Value = Main.iOWFSPollTime
  'vbPollTime.Enabled = chkEnabled.Value
  'chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = False

End

Public Sub btnSave_Click()

  Dim rResult As Result

  If Not FMain.MinValue(Me.vbPollTime, 60) Then Return

  ' save new OWFS settings
  rResult = Main.hDB.Exec("UPDATE settings_owfs SET debug = &1, enabled = &2, polltime = &3, cached = &4, basedir = &5 WHERE id = 1", chkDebug.Value, chkEnabled.Value, vbPollTime.Value, chkCached.Value, txtBaseDir.Text)
  rResult = Main.GetSettingTable("owfs") ' reload settings
  If rResult.Count Then
    Main.bOWFSEnabled = rResult!enabled
    Main.iOWFSPollTime = rResult!polltime
    Main.bOWFSCached = rResult!cached
    Main.sOWFSBaseDir = rResult!basedir
    Main.bOWFSDebug = rResult!debug
  End If
  If Main.bServer Then
    Main.Restart_OWFS()
  Else
    XMLClient.ModuleRestart("OWFS")
  End If
  Me.Close

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub chkEnabled_Click()

  vbPollTime.Enabled = chkEnabled.Value
  txtBaseDir.Enabled = chkEnabled.Value
  chkCached.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("owfs", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    vbPollTime.Value = rResult!polltime
    txtBaseDir.Text = rResult!basedir
    chkCached.Value = rResult!cached
    chkDebug.Value = rResult!debug
  End If
  btnSave.Enabled = True

End

Public Sub vbPollTime_Change()

  btnSave.Enabled = True

End

Public Sub chkCached_Click()

  btnSave.Enabled = True

End

Public Sub txtBaseDir_KeyPress()

  btnSave.Enabled = True

End
