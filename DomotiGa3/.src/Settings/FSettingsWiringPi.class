Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  ' TODO: add more instances
  If LoadSettings(1) = False Then
    ' TODO: Handle problems
    Message.Error("Couldn't load settings table, perhaps database is too old?")
    Try Me.Close
    Return
  Endif

  EnableDisableSettings()
  btnSave.Enabled = False

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new WiringPi settings
  rResult = Main.hDB.Exec("UPDATE settings_wiringpi SET debug = &1, enabled = &2, polltime = &3 WHERE id = 1", chkDebug.Value, chkEnabled.Value, vbPollTime.Value)

  If Main.bServer Then
    Plugin.Restart("WiringPi", 1)
  Else
    Client.Plugin_Restart("WiringPi")
  Endif

  Me.Close

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub chkEnabled_Click()

  EnableDisableSettings()
  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnDefaults_Click()

  LoadSettings(0)
  btnSave.Enabled = True

End

Public Sub vbPollTime_KeyPress()

  btnSave.Enabled = True

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' Load table row
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Private Sub LoadSettings(iRow As Integer) As Boolean

  Dim rResult As Result

  rResult = Plugin.GetSettingsTable("settings_wiringpi", iRow)
  If rResult Then
    If rResult.Count Then
     chkEnabled.Value = rResult!enabled
      vbPollTime.Value = rResult!polltime
      chkDebug.Value = rResult!debug
      Return True
    Else
      Return False
    Endif
  Else
    Return False
  Endif

End

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' Enable/Disable all input fields depending on enable value
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Private Sub EnableDisableSettings()

  vbPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value

End

