Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  txtUDPHost.Text = Main.sEZcontrolUDPHost
  chkDebug.Value = Main.bEZcontrolDebug
  chkEnabled.Value = Main.bEZcontrolEnabled
  btnSave.Enabled = False

  If Main.bEZcontrolEnabled = False Then
    txtUDPHost.Enabled = False
    chkDebug.Enabled = False
  Endif

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub txtUDPHost_KeyPress()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new EZcontrol settings
  rResult = Main.hDB.Exec("UPDATE settings_ezcontrol SET debug = &1, udphost = &2, enabled = &3 WHERE id = 1", chkDebug.Value, txtUDPHost.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("ezcontrol") ' reload settings
  If rResult.Count Then
    Main.bEZcontrolEnabled = rResult!enabled
    Main.sEZcontrolUDPHost = rResult!udphost
    Main.bEZcontrolDebug = rResult!debug
  Endif
  If Main.bServer Then
    Main.Restart_EZcontrol()
  Else
    XMLClient.ModuleRestart("EZcontrol")
  Endif
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("ezcontrol", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    txtUDPHost.Text = rResult!udphost
    chkDebug.Value = rResult!debug
  Endif
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtUDPHost.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End
