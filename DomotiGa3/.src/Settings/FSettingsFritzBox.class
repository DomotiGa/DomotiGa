Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  txtTCPHost.Text = Main.sFritzBoxTCPHost
  chkDebug.Value = Main.bFritzBoxDebug
  chkEnabled.Value = Main.bFritzBoxEnabled
  btnSave.Enabled = False

  If Main.bFritzBoxEnabled = False Then
    txtTCPHost.Enabled = False
    chkDebug.Enabled = False
  Endif

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub txtTCPHost_KeyPress()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new FritzBox settings
  rResult = Main.hDB.Exec("UPDATE settings_fritzbox SET debug = &1, tcphost = &2, enabled = &3 WHERE id = 1", chkDebug.Value, txtTCPHost.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("fritzbox") ' reload settings
  If rResult.Count Then
    Main.bFritzBoxEnabled = rResult!enabled
    Main.sFritzBoxTCPHost = rResult!tcphost
    Main.bFritzBoxDebug = rResult!debug
  Endif
  If Main.bServer Then
    Main.Restart_FritzBox()
  Else
    XMLClient.ModuleRestart("FritzBox")
  Endif
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("fritzbox", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    txtTCPHost.Text = rResult!tcphost
    chkDebug.Value = rResult!debug
  Endif
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtTCPHost.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End
