Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  txtSerialPort.Text = Main.sPLCBUSSerialPort
  cmbBaudrate.Text = Main.sPLCBUSBaudrate
  txtPollTime.Text = Main.iPLCBUSPollTime
  chkDebug.Value = Main.bPLCBUSDebug
  chkEnabled.Value = Main.bPLCBUSEnabled
  txtUserCode.Text = Main.sPLCBUSUserCode
  chkThreePhase.Value = Main.bPLCBUSThreePhase
  txtHouseCodes.Text = Main.sPLCBUSHouseCodes
  chkAck.Value = Main.bPLCBUSAck
  btnSave.Enabled = False

  If Main.bPLCBUSEnabled = False Then
    txtSerialPort.Enabled = False
    cmbBaudrate.Enabled = False
    txtPollTime.Enabled = False
    txtUserCode.Enabled = False
    txtHouseCodes.Enabled = False
    chkThreePhase.Enabled = False
    chkDebug.Enabled = False
    chkAck.Enabled = False
  Endif

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub txtSerialPort_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtUserCode_KeyPress()

  btnSave.Enabled = True

