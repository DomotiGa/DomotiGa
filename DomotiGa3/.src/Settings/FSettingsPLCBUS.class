Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new PLCBUS settings
  rResult = Main.hDB.Exec("UPDATE settings_plcbus SET debug = &1, polltime = &2, serialport = &3, baudrate = &4, enabled = &5, usercode = &6, threephase = &7, housecodes = &8, ack = &9 WHERE id = 1", chkDebug.Value, txtPollTime.Text, txtSerialPort.Text, cmbBaudrate.Text, chkEnabled.Value, txtUserCode.Text, chkThreePhase.Value, txtHouseCodes.Text, chkAck.Value)

  rResult = Main.GetSettingTable("plcbus") ' reload settings
  If rResult.Count Then
    Main.bPLCBUSEnabled = rResult!enabled
    Main.sPLCBUSSerialPort = rResult!serialport
    Main.sPLCBUSBaudrate = rResult!baudrate
    Main.iPLCBUSPollTime = rResult!polltime
    Main.bPLCBUSDebug = rResult!debug
    Main.sPLCBUSUserCode = rResult!usercode
    Main.bPLCBUSThreePhase = rResult!threephase
    Main.sPLCBUSHouseCodes = rResult!housecodes
    Main.bPLCBUSAck = rResult!ack
  Endif

  If Main.bServer Then
    Main.Restart_PLCBUS()
  Else
    XMLClient.ModuleRestart("PLCBUS")
  Endif

  FMain.UpdateStatusPanel()
  Me.Close

End

Public Sub btnDefaults_Click()

  LoadSettings(0)
