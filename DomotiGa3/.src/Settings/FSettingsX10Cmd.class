Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  LoadSettings()
  btnSave.Enabled = False

  If Main.bX10CmdEnabled = False Then
    txtCommand.Enabled = False
    chkMonitor.Enabled = False
    chkGlobalX10.Enabled = False
    chkDebug.Enabled = False
    cmbType.Enabled = False
  Endif

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub txtCommand_KeyPress()

  btnSave.Enabled = True

End

Public Sub chkMonitor_Click()

  btnSave.Enabled = True

End

Public Sub chkGlobalX10_Click()

  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new X10Cmd settings
  rResult = Main.hDB.Exec("UPDATE settings_x10cmd SET debug = &1, command = &2, enabled = &3, monitor = &4, globalx10 = &5, type = &6 WHERE id = 1", chkDebug.Value, txtCommand.Text, chkEnabled.Value, chkMonitor.Value, chkGlobalX10.Value, cmbType.Index)
  LoadSettings()
  If Main.bServer Then
    Main.Restart_X10Cmd()
  Else
    XMLClient.ModuleRestart("X10Cmd")
  Endif
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("x10cmd", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    txtCommand.text = rResult!command
    chkMonitor.Value = rResult!monitor
    chkGlobalX10.Value = rResult!globalx10
    chkDebug.Value = rResult!debug
    cmbType.Index = rResult!type
  Endif
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtCommand.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  chkMonitor.Enabled = chkEnabled.Value
  chkGlobalX10.Enabled = chkEnabled.Value
  cmbType.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End

Public Sub LoadSettings()

  Dim rResult As Result

  rResult = Main.GetSettingTable("x10cmd") ' reload settings
  If rResult.Count Then
    Main.bX10CmdEnabled = rResult!enabled
    Main.sX10CmdCommand = rResult!command
    Main.bX10CmdMonitor = rResult!monitor
    Main.bX10CmdGlobalX10 = rResult!globalx10
    Main.bX10CmdDebug = rResult!debug
    Main.iX10CmdType = rResult!type
  Endif
  txtCommand.Text = Main.sX10CmdCommand
  chkMonitor.Value = Main.bX10CmdMonitor
  chkDebug.Value = Main.bX10CmdDebug
  chkGlobalX10.Value = Main.bX10CmdGlobalX10
  chkEnabled.Value = Main.bX10CmdEnabled
  cmbType.Index = Main.iX10CmdType

  If cmbType.Index = 0 Or cmbType.Index = 1 Then
    chkMonitor.Enabled = True
  Else
    chkMonitor.Enabled = False
  Endif

End

Public Sub cmbType_Click()

  btnSave.Enabled = True
  If cmbType.Index = 0 Or cmbType.Index = 1 Then
    chkMonitor.Enabled = True
  Else
    chkMonitor.Enabled = False
  Endif

End
