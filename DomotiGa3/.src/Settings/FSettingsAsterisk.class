Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  txtTCPPort.Text = Main.iAsteriskTCPPort
  txtTCPHost.Text = Main.sAsteriskTCPHost
  txtPollTime.Text = Main.iAsteriskPollTime
  txtUser.Text = Main.sAsteriskUser
  txtPassword.Text = Main.sAsteriskPassword
  chkDebug.Value = Main.bAsteriskDebug
  chkEnabled.Value = Main.bAsteriskEnabled
  btnSave.Enabled = False

  If Main.bAsteriskEnabled = False Then
    txtTCPPort.Enabled = False
    txtPollTime.Enabled = False
    txtTCPHost.Enabled = False
    txtUser.Enabled = False
    txtPassword.Enabled = False
    chkDebug.Enabled = False
  Endif

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub txtTCPPort_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtUser_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtPassword_KeyPress()

  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub txtTCPHost_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtPollTime_KeyPress()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new Asterisk settings
  rResult = Main.hDB.Exec("UPDATE settings_asterisk SET user = &1, password = &2, debug = &3, polltime = &4, tcphost = &5, tcpport = &6, enabled = &7 WHERE id = 1", txtUser.Text, txtPassword.Text, chkDebug.Value, txtPollTime.Text, txtTCPHost.Text, txtTCPPort.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("asterisk") ' reload settings
  If rResult.Count Then
    Main.bAsteriskEnabled = rResult!enabled
    Main.sAsteriskTCPHost = rResult!tcphost
    Main.iAsteriskTCPPort = rResult!tcpport
    Main.iAsteriskPollTime = rResult!polltime
    Main.sAsteriskUser = rResult!user
    Main.sAsteriskPassword = rResult!password
    Main.bAsteriskDebug = rResult!debug
  Endif
  If Main.bServer Then
    Main.Restart_Asterisk()
  Else
    XMLClient.ModuleRestart("Asterisk")
  Endif
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("asterisk", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    txtPollTime.Text = rResult!polltime
    txtTCPHost.Text = rResult!tcphost
    txtTCPPort.Text = rResult!tcpport
    txtUser.Text = rResult!user
    txtPassword.Text = rResult!password
    chkDebug.Value = rResult!debug
  Endif
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  txtPollTime.Enabled = chkEnabled.Value
  txtPassword.Enabled = chkEnabled.Value
  txtUser.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End
