Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  chkEnabled.Value = Main.bKMTronicUDPEnabled
  txtUDPPort.Text = Main.iKMTronicUDPPort
  txtPolltime.Text = Main.iKMTronicUDPPolltime
  chkDebug.Value = Main.bKMTronicUDPDebug
  btnSave.Enabled = False

  If Main.bKMTronicUDPEnabled = False Then
    txtUDPPort.Enabled = False
    txtPolltime.Enabled = False
    chkDebug.Enabled = False
  Endif

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub txtPolltime_KeyPress()

  btnSave.Enabled = True

End

Public Sub txtUDPPort_KeyPress()

  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new KMTronicUDP settings
  rResult = Main.hDB.Exec("UPDATE settings_kmtronicudp SET debug = &1, udpport = &2, polltime = &3, enabled = &4  WHERE id = 1", chkDebug.Value, txtUDPPort.Text, txtPolltime.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("kmtronicudp") ' reload settings
  If rResult.Count Then
    Main.bKMTronicUDPEnabled = rResult!enabled
    Main.iKMTronicUDPPort = rResult!udpport
    Main.iKMTronicUDPPolltime = rResult!polltime
    Main.bKMTronicUDPDebug = rResult!debug
  Endif
  If Main.bServer Then
    Main.Restart_KMTronicUDP()
  Else
    XMLClient.ModuleRestart("KMTronicUDP")
  Endif
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("kmtronicudp", True) ' get defaults
  chkEnabled.Value = rResult!enabled
  txtUDPPort.Text = rResult!udpport
  txtPolltime.Text = rResult!polltime
  chkDebug.Value = rResult!debug

  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtPolltime.Enabled = chkEnabled.Value
  txtUDPPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End
