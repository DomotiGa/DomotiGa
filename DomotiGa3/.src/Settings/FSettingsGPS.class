Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  txtSerialPort.Text = Main.sGPSSerialPort
  cmbBaudrate.Text = Main.sGPSBaudrate
  txtPollTime.Text = Main.iGPSPollTime
  chkDebug.Value = Main.bGPSDebug
  chkEnabled.Value = Main.bGPSEnabled

  btnSave.Enabled = False

  If Main.bGPSEnabled = False Then
    txtSerialPort.Enabled = False
    cmbBaudrate.Enabled = False
    txtPollTime.Enabled = False
    chkDebug.Enabled = False
  Endif

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub txtSerialPort_KeyPress()

  btnSave.Enabled = True

End

Public Sub cmbBaudrate_Click()

  btnSave.Enabled = True

End

Public Sub txtPollTime_KeyPress()

  btnSave.Enabled = True

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new GPS settings
  rResult = Main.hDB.Exec("UPDATE settings_gps SET debug = &1, polltime = &2, serialport = &3, baudrate = &4, enabled = &5 WHERE id = 1", chkDebug.Value, txtPollTime.Text, txtSerialPort.Text, cmbBaudrate.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("gps") ' reload settings
  If rResult.Count Then
    Main.bGPSEnabled = rResult!enabled
    Main.sGPSSerialPort = rResult!serialport
    Main.sGPSBaudrate = rResult!baudrate
    Main.iGPSPollTime = rResult!polltime
    Main.bGPSDebug = rResult!debug
  Endif
  If Main.bServer Then
    Main.Restart_GPS()
  Else
    XMLClient.ModuleRestart("GPS")
  Endif
  Me.Close

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("gps", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    txtSerialPort.text = rResult!serialport
    txtPollTime.text = rResult!polltime
    cmbBaudrate.text = rResult!baudrate
    chkDebug.Value = rResult!debug
  Endif
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtSerialPort.Enabled = chkEnabled.Value
  cmbBaudrate.Enabled = chkEnabled.Value
  txtPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End
