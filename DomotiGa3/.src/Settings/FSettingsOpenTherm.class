Public Sub btnSave_Click()

  Dim rResult As Result
  Dim sSettings As String

  sSettings = "debug = " & chkDebug.Value
  sSettings &= ", serialport = '" & txtSerialPort.Text & "'"
  sSettings &= ", thermostat = '" & cmbThermostat.Text & "'"
  sSettings &= ", enabled = " & chkEnabled.Value
  sSettings &= ", syncclock = " & chkSyncClock.Value
  sSettings &= ", temperatureoverride = '" & cmbTemperatureOverride.Text & "'"
  sSettings &= ", type = '" & cmbType.Text & "'"
  sSettings &= ", tcphost = '" & txtTCPHost.Text & "'"
  sSettings &= ", tcpport = " & txtTCPPort.Text
  sSettings &= ", relayenabled = " & txtRelayPort.Text
  sSettings &= ", relayport = " & txtRelayPort.Text
  sSettings &= ", polltime = " & txtPolltime.Text

  ' save new OpenTherm settings
  rResult = Main.hDB.Exec("UPDATE settings_opentherm SET " & sSettings & " WHERE id = 1")

  If Main.bServer Then
    Plugin.Restart("OpenTherm", 1)
  Else
    Client.ModuleRestart("OpenTherm")
  Endif

  Me.Close

End

