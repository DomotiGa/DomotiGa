Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  ' TODO: add more instances
  If LoadSettings(1) = False Then
    ' TODO: Handle problems
    Try Me.Close
    Return
  Endif

  EnableDisableSettings()
  btnSave.Enabled = False

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new K8055 settings
  rResult = Main.hDB.Exec("UPDATE settings_k8055 SET debug = &1, polltime = &2, boardaddress = &3, debouncetime1 = &4, debouncetime2 = &5, enabled = &6 WHERE id = 1", chkDebug.Value, txtPolltime.Text, cmbBoardAddress.Text, txtdebouncetime1.Text, txtdebouncetime2.Text, chkEnabled.Value)

  If Main.bServer Then
    Plugin.Restart("K8055", 1)
  Else
    XMLClient.ModuleRestart("K8055")
  Endif

  Me.Close

End

Public Sub btnDefaults_Click()

  LoadSettings(0)
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  EnableDisableSettings()
  btnSave.Enabled = True

End

