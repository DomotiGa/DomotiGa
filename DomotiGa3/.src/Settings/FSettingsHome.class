Public Sub ListViewTop_Drop()

  If Not (Left(Drag.Data, 4) = "TOP ") Then
    CreateEntry(Drag.Data, ListViewTop)
    DeleteEntry(Drag.Data)
    btnSave.Enabled = True
  Endif

End

