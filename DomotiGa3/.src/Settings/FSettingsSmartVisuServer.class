Public Sub Form_Open()

  Me.Move(FMain.X + 50, FMain.Y + 70)

  txtPort.Text = Main.iSmartVisuServerPort
  chkDebug.Value = Main.bSmartVisuServerDebug
  chkEnabled.Value = Main.bSmartVisuServerEnabled
  btnSave.Enabled = False

  txtPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value

End

Public Sub btnSave_Click()

  Dim rResult As Result

  ' save new SmartVISUServer settings
  rResult = Main.hDB.Exec("UPDATE settings_smartvisu SET debug = &1, tcpport = &2, enabled = &3 WHERE id = 1", chkDebug.Value, txtPort.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("smartvisu") ' reload settings
  If rResult.Count Then
    Main.bSmartVisuServerEnabled = rResult!enabled
    Main.iSmartVisuServerPort = rResult!tcpport
    Main.bSmartVisuServerDebug = rResult!debug
  Endif
  If Main.bServer Then
    Main.Restart_SmartVisuServer()
  Else
    XMLClient.ModuleRestart("SmartVisuServer")
  Endif
  Me.Close

End

Public Sub btnCancel_Click()

  Me.Close

End

Public Sub chkDebug_Click()

  btnSave.Enabled = True

End

Public Sub btnDefaults_Click()

  Dim rResult As Result

  rResult = Main.GetSettingTable("smartvisu", True) ' get defaults
  If rResult.Count Then
    chkEnabled.Value = rResult!enabled
    txtPort.text = rResult!tcpport
    chkDebug.Value = rResult!debug
  Endif
  btnSave.Enabled = True

End

Public Sub chkEnabled_Click()

  txtPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = True

End

Public Sub txtPort_KeyPress()

  btnSave.Enabled = True

End
