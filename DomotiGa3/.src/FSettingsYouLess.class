PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  chkEnabled.Value = Main.bYouLessEnabled
  txtFetchURL.Text = Main.sYouLessFetchURL
  txtPolltime.Text = Main.iYouLessPolltime
  chkDebug.Value = Main.bYouLessDebug
  btnSave.Enabled = FALSE

  IF Main.bYouLessEnabled = FALSE THEN
    txtFetchURL.Enabled = FALSE
    txtPolltime.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtFetchURL_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtPolltime_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new YouLess settings
  rResult = Main.hDB.Exec("UPDATE settings_youless SET debug = &1, fetchurl = &2, polltime = &3, enabled = &4  WHERE id = 1", chkDebug.Value, txtFetchURL.Text, txtPolltime.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("youless") ' reload settings
  IF rResult.Count THEN
    Main.bYouLessEnabled = rResult!enabled
    Main.sYouLessFetchURL = rResult!fetchurl
    Main.iYouLessPolltime = rResult!polltime
    Main.bYouLessDebug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_YouLess()
  ELSE
    XMLClient.ModuleRestart("YouLess")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("youless", TRUE) ' get defaults

  chkEnabled.Value = rResult!enabled
  txtFetchURL.Text = rResult!fetchurl
  txtPolltime.Text = rResult!polltime
  chkDebug.Value = rResult!debug

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtFetchURL.Enabled = chkEnabled.Value
  txtPolltime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END
