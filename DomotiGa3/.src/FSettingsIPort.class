PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  cmbType.Text = Main.sIPortType
  txtSerialPort.Text = Main.sIPortSerialPort
  cmbBaudrate.Text = Main.sIPortBaudrate
  txtTCPHost.Text = Main.sIPortTCPHost
  txtTCPPort.Text = Main.iIPortTCPPort
  chkDebug.Value = Main.bIPortDebug
  chkEnabled.Value = Main.bIPortEnabled
  btnSave.Enabled = FALSE

  IF Main.bIPortEnabled = FALSE THEN
    cmbType.Enabled = FALSE
    txtSerialPort.Enabled = FALSE
    cmbBaudrate.Enabled = FALSE
    txtTCPHost.Enabled = FALSE
    txtTCPPort.Enabled = FALSE
    chkDebug.Enabled = FALSE
  ELSE
    SetButtons()
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtSerialPort_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB cmbBaudrate_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new IPort settings
  rResult = Main.hDB.Exec("UPDATE settings_iport SET debug = &1, type = &2, serialport = &3, baudrate = &4, tcphost = &5, enabled = &6, tcpport = &7 WHERE id = 1", chkDebug.Value, cmbType.Text, txtSerialPort.Text, cmbBaudrate.Text, txtTCPHost.Text, chkEnabled.Value, txtTCPPort.Text)
  rResult = Main.GetSettingTable("iport") ' reload settings
  IF rResult.Count THEN
    Main.bIPortEnabled = rResult!enabled
    Main.sIPortSerialPort = rResult!serialport
    Main.sIPortBaudrate = rResult!baudrate
    Main.sIPortTCPHost = rResult!tcphost
    Main.iIPortTCPPort = rResult!tcpport
    Main.sIPortType = rResult!type
    Main.bIPortDebug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_IPort()
  ELSE
    XMLClient.ModuleRestart("IPort")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("iport", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtSerialPort.Text = rResult!serialport
    txtTCPPort.Text = rResult!tcpport
    txtTCPHost.Text = rResult!tcphost
    cmbType.Text = rResult!type
    cmbBaudrate.Text = rResult!baudrate
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtSerialPort.Enabled = chkEnabled.Value
  cmbBaudrate.Enabled = chkEnabled.Value
  cmbType.Enabled = chkEnabled.Value
  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE
  IF chkEnabled.Value THEN SetButtons()

END

PUBLIC SUB SetButtons()

  IF cmbType.Text = "tcp" THEN
    txtSerialPort.Enabled = FALSE
    cmbBaudrate.Enabled = FALSE
    txtTCPHost.Enabled = TRUE
    txtTCPPort.Enabled = TRUE
  END IF
  IF cmbType.Text = "serial" THEN
    txtSerialPort.Enabled = TRUE
    cmbBaudrate.Enabled = TRUE
    txtTCPHost.Enabled = FALSE
    txtTCPPort.Enabled = FALSE
  END IF

END

PUBLIC SUB cmbType_Click()

  SetButtons()
  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPHost_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPPort_KeyPress()

  btnSave.Enabled = TRUE

END
