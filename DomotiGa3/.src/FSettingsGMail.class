PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtUser.Text = Main.sGmailUser
  txtPassword.Text = Main.sGmailPassword
  txtPollTime.Text = Main.iGmailPollTime
  chkDebug.Value = Main.bGmailDebug
  chkEnabled.Value = Main.bGmailEnabled

  IF Main.bGmailEnabled = FALSE THEN
    txtUser.Enabled = FALSE
    txtPassword.Enabled = FALSE
    txtPollTime.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF
  btnSave.Enabled = FALSE

END

PUBLIC SUB ButtonCancel_Click()

  ME.Close

END

PUBLIC SUB txtUser_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtPassword_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtPollTime_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtUser.Enabled = chkEnabled.Value
  txtPassword.Enabled = chkEnabled.Value
  txtPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("gmail", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtUser.Text = rResult!user
    txtPassword.Text = rResult!password
    txtPollTime.Text = rResult!polltime
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new GMail settings
  rResult = Main.hDB.Exec("UPDATE settings_gmail SET debug = &1, enabled = &2, user = &3, password = &4, polltime = &5 WHERE id = 1", chkDebug.Value, chkEnabled.Value, txtUser.Text, txtPassword.Text, txtPolltime.text)
  rResult = Main.GetSettingTable("gmail") ' reload settings
  IF rResult.Count THEN
    Main.bGmailEnabled = rResult!enabled
    Main.sGmailUser = rResult!user
    Main.sGmailPassword = rResult!password
    Main.iGmailPollTime = rResult!polltime
    Main.bGmailDebug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_Gmail()
  ELSE
    XMLClient.ModuleRestart("Gmail")
  END IF
  ME.Close

END
