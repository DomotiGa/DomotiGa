PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  chkEnabled.Value = Main.bAIBOEnabled
  txtPollTime.Text = Main.iAIBOPollTime
  chkDebug.Value = Main.bAIBODebug
  txtPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = FALSE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new AIBO settings
  rResult = Main.hDB.Exec("UPDATE settings_aibo SET debug = &1, enabled = &2, polltime = &3 WHERE id = 1", chkDebug.Value, chkEnabled.Value, txtPollTime.Text)
  rResult = Main.GetSettingTable("aibo") ' reload settings
  IF rResult.Count THEN
    Main.bAIBOEnabled = rResult!enabled
    Main.iAIBOPollTime = rResult!polltime
    Main.bAIBODebug = rResult!debug
  END IF
  Main.Restart_AIBO()

  ME.Close

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtPollTime_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("aibo", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtPollTime.text = rResult!polltime
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END
