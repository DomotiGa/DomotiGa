PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtSerialPort.Text = Main.sPLCBUSSerialPort
  cmbBaudrate.Text = Main.sPLCBUSBaudrate
  txtPollTime.Text = Main.iPLCBUSPollTime
  chkDebug.Value = Main.bPLCBUSDebug
  chkEnabled.Value = Main.bPLCBUSEnabled
  txtUserCode.Text = Main.sPLCBUSUserCode
  chkThreePhase.Value = Main.bPLCBUSThreePhase
  btnSave.Enabled = FALSE

  IF Main.bPLCBUSEnabled = FALSE THEN 
    txtSerialPort.Enabled = FALSE
    cmbBaudrate.Enabled = FALSE
    txtPollTime.Enabled = FALSE
    txtUserCode.Enabled = FALSE
    chkThreePhase.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtSerialPort_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtUserCode_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB cmbBaudrate_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtPollTime_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkThreePhase_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new PLCBUS settings
  rResult = Main.hDB.Exec("UPDATE settings_plcbus SET debug = &1, polltime = &2, serialport = &3, baudrate = &4, enabled = &5, usercode = &6, threephase = &7 WHERE id = 1", chkDebug.Value, txtPollTime.Text, txtSerialPort.Text, cmbBaudrate.Text, chkEnabled.Value, txtUserCode.Text, chkThreePhase.Value)
  rResult = Main.GetSettingTable("plcbus") ' reload settings
  IF rResult.Count THEN
    Main.bPLCBUSEnabled = rResult!enabled
    Main.sPLCBUSSerialPort = rResult!serialport
    Main.sPLCBUSBaudrate = rResult!baudrate
    Main.iPLCBUSPollTime = rResult!polltime
    Main.bPLCBUSDebug = rResult!debug
    Main.sPLCBUSUserCode = rResult!usercode
    Main.bPLCBUSThreePhase = rResult!threephase
  END IF
  IF Main.bStandalone THEN
    Main.Restart_PLCBUS()
  ELSE
    XMLClient.ModuleRestart("PLCBUS")
  END IF
  FMain.UpdateStatusPanel()
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("plcbus", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtSerialPort.Text = rResult!serialport
    txtPollTime.Text = rResult!polltime
    cmbBaudrate.Text = rResult!baudrate
    chkDebug.Value = rResult!debug
    txtUserCode.Text = rResult!usercode
    chkThreePhase.Value = rResult!threephase
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtSerialPort.Enabled = chkEnabled.Value
  cmbBaudrate.Enabled = chkEnabled.Value
  txtPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  chkThreePhase.Enabled = chkEnabled.Value
  txtUserCode.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END
