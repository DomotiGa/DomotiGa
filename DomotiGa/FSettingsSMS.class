PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtSerialPort.Text = Main.sSMSSerialPort
  cmbBaudrate.Text = Main.sSMSBaudrate
  txtPollTime.Text = Main.iSMSPollTime
  txtPIN.Text = Main.sSMSPIN
  txtServiceCentre.Text = Main.sSMSServiceCentre
  txtContact.Text = Main.sSMSContact
  chkDebug.Value = Main.bSMSDebug
  chkEnabled.Value = Main.bSMSEnabled

  btnSave.Enabled = FALSE

  IF Main.bSMSEnabled = FALSE THEN 
    txtSerialPort.Enabled = FALSE
    cmbBaudrate.Enabled = FALSE
    txtPollTime.Enabled = FALSE
    txtPIN.Enabled = FALSE
    txtServiceCentre.Enabled = FALSE
    txtContact.Enabled = FALSE
    chkDebug.Enabled = FALSE
    btnTest.Enabled = FALSE
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtSerialPort_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB cmbBaudrate_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtPollTime_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new SMS settings
  rResult = Main.hDB.Exec("UPDATE settings_sms SET debug = &1, polltime = &2, serialport = &3, baudrate = &4, pin= &5, servicecentre = &6, contact = &7, enabled = &8 WHERE id = 1", chkDebug.Value, txtPollTime.Text, txtSerialPort.Text, cmbBaudrate.Text, txtPIN.Text, txtServiceCentre.Text, txtContact.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("sms") ' reload settings
  IF rResult.Count THEN
    Main.bSMSEnabled = rResult!enabled
    Main.sSMSSerialPort = rResult!serialport
    Main.sSMSBaudrate = rResult!baudrate
    Main.sSMSPIN = rResult!pin
    Main.sSMSContact = rResult!contact
    Main.sSMSServiceCentre = rResult!servicecentre
    Main.iSMSPollTime = rResult!polltime
    Main.bSMSDebug = rResult!debug
  END IF
  IF Main.bStandalone THEN
    Main.Restart_SMS()
  ELSE
    XMLClient.ModuleRestart("SMS")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("sms", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtSerialPort.Text = rResult!serialport
    txtPIN.Text = rResult!pin
    txtPollTime.Text = rResult!polltime
    cmbBaudrate.Text = rResult!baudrate
    txtContact.Text = rResult!contact
    txtServiceCentre.Text = rResult!servicecentre
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtSerialPort.Enabled = chkEnabled.Value
  cmbBaudrate.Enabled = chkEnabled.Value
  txtPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  txtPIN.Enabled = chkEnabled.Value
  txtServiceCentre.Enabled = chkEnabled.Value
  txtContact.Enabled = chkEnabled.Value
  btnTest.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB txtPIN_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtServiceCentre_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtContact_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnTest_Click()

  IF Main.bStandalone THEN
    Main.hSMS.SendSMS(("DomotiGa: Test SMS. If you read this, SMS support is working!"), Main.sSMSContact)
  ELSE
    XMLClient.SendSMS(Main.sSMSContact, ("DomotiGa: Test SMS. If you read this, SMS support is working!"))
  END IF

END

