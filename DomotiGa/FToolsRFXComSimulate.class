PRIVATE bDebugTempEnabled AS Boolean

PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  IF NOT Main.bRFXComEnabled THEN
    Message.Info("RFXCom module is not enabled.")
    ME.Close
  END IF

  IF NOT Main.bRFXComDebug THEN
    Main.bRFXComDebug = TRUE
    bDebugTempEnabled = TRUE
  END IF

END

PUBLIC SUB btnClose_Click()

  IF bDebugTempEnabled THEN Main.bRFXComDebug = FALSE
  ME.Close

END

PUBLIC SUB btnTest_Click()

  Main.hRFXCom.bSimulate = TRUE
  IF txtPacket.Text THEN Main.hRFXCom.Simulate(txtPacket.Text)

END
