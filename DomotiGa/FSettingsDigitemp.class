PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  LoadSettings()
  btnSave.Enabled = FALSE

  IF Main.bDigitempEnabled = FALSE THEN
    txtReadTime.Enabled = FALSE
    txtPollTime.Enabled = FALSE
    txtCommand.Enabled = FALSE
    txtConfig.Enabled = FALSE
    chkDebug.Enabled = FALSE
  ENDIF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("digitemp", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtCommand.Text = rResult!command
    txtPollTime.Text = rResult!polltime
    txtReadTime.Text = rResult!readtime
    txtConfig.Text = rResult!config
    chkDebug.Value = rResult!debug
  ENDIF
  btnSave.Enabled = TRUE

END


PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new digitemp settings
  rResult = Main.hDB.Exec("UPDATE settings_digitemp SET command = &1, debug = &2, config = &3, polltime = &4, readtime = &5, enabled = &6 WHERE id = 1", txtCommand.Text, chkDebug.Value, txtConfig.Text, txtPollTime.Text, txtReadTime.Text, chkEnabled.Value)
  LoadSettings()
  IF Main.bServer THEN
    Main.Restart_Digitemp()
  ELSE
    XMLClient.ModuleRestart("Digitemp")
  ENDIF
  ME.Close

END

PUBLIC SUB chkEnabled_Click()

  txtCommand.Enabled = chkEnabled.Value
  txtPollTime.Enabled = chkEnabled.Value
  txtConfig.Enabled = chkEnabled.Value
  txtReadTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB txtCommand_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtConfig_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtPollTime_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtReadTime_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB LoadSettings()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("digitemp") ' reload settings
  IF rResult.Count THEN
    Main.bDigitempEnabled = rResult!enabled
    Main.sDigitempCommand = rResult!command
    Main.sDigitempConfig = rResult!config
    Main.iDigitempPollTime = rResult!polltime
    Main.iDigitempReadTime = rResult!readtime
    Main.bDigitempDebug = rResult!debug
  ENDIF
  txtCommand.Text = Main.sDigitempCommand
  txtConfig.Text = Main.sDigitempConfig
  txtPollTime.Text = Main.iDigitempPollTime
  txtReadTime.Text = Main.iDigitempReadTime
  chkDebug.Value = Main.bDigitempDebug
  chkEnabled.Value = Main.bDigitempEnabled

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END
