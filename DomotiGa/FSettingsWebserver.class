PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtDocRoot.Text = Main.sWebserverDocRoot
  txtHTTPPort.Text = Main.iWebserverHTTPPort
  chkDebug.Value = Main.bWebserverDebug
  chkEnabled.Value = Main.bWebserverEnabled
  btnSave.Enabled = FALSE

  IF Main.bWebserverEnabled = FALSE THEN
    txtDocRoot.Enabled = FALSE
    txtHTTPPort.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new Webserver settings
  rResult = Main.hDB.Exec("UPDATE settings_webserver SET debug = &1, docroot = &2, httpport = &3, enabled = &4 WHERE id = 1", chkDebug.Value, txtDocRoot.Text, txtHTTPPort.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("webserver") ' reload settings
  IF rResult.Count THEN
    Main.bWebserverEnabled = rResult!enabled
    Main.sWebserverDocRoot = rResult!docroot
    Main.iWebserverHTTPPort = rResult!httpport
    Main.bWebserverDebug = rResult!debug
  END IF
  IF Main.bStandalone THEN
    Main.Restart_Webserver()
  ELSE
    XMLClient.ModuleRestart("Webserver")
  END IF
  ME.Close

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("webserver", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtDocRoot.text = rResult!docroot
    txtHTTPPort.text = rResult!httpport
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtDocRoot.Enabled = chkEnabled.Value
  txtHTTPPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB txtDocRoot_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtHTTPPort_KeyPress()

  btnSave.Enabled = TRUE

END
