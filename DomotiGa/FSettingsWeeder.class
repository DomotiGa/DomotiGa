PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtSerialPort.Text = Main.sWeederSerialport
  chkDebug.Value = Main.bWeederDebug
  chkEnabled.Value = Main.bWeederEnabled

  btnSave.Enabled = FALSE

  IF Main.bWeederEnabled = FALSE THEN 
    txtSerialPort.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtSerialPort_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new Weeder settings
  rResult = Main.hDB.Exec("UPDATE settings_weeder SET debug = &1, serialport = &2, enabled = &3 WHERE id = 1", chkDebug.Value, txtSerialPort.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("weeder") ' reload settings
  IF rResult.Count THEN
    Main.bWeederEnabled = rResult!enabled
    Main.sWeederSerialPort = rResult!serialport
    Main.bGPSDebug = rResult!debug
  END IF
  Main.Restart_Weeder()

  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("weeder", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtSerialPort.text = rResult!serialport
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtSerialPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

