PRIVATE hTextBoxBirthDay AS TextBox
PUBLIC sFilter AS String

'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' create contacts table
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
PUBLIC SUB InitTable()

  DIM tableContact AS Table

  Main.hDB.Tables.Remove("contacts")

  tableContact = Main.hDB.Tables.Add("contacts")
  tableContact.Fields.Add("id", db.Serial)
  tableContact.Fields.Add("name", db.String, 32)
  tableContact.Fields.Add("address", db.String, 32)
  tableContact.Fields.Add("zipcode", db.String, 11)
  tableContact.Fields.Add("city", db.String, 32)
  tableContact.Fields.Add("country", db.String, 32)
  tableContact.Fields.Add("phoneno", db.String, 32)
  tableContact.Fields.Add("mobileno", db.String, 32)
  tableContact.Fields.Add("email", db.String, 32)
  tableContact.Fields.Add("cidphone", db.String, 32)
  tableContact.Fields.Add("cidmobile", db.String, 32)
  tableContact.Fields.Add("birthday", db.Date)
  tableContact.Fields.Add("holidaycard", db.Boolean)
  tableContact.Fields.Add("comments", db.String, 0)
  tableContact.Fields.Add("firstname", db.String, 32)
  tableContact.Fields.Add("surname", db.String, 32)
  tableContact.Fields.Add("callnr", db.Integer, 0)
  tableContact.Fields.Add("type", db.String, 16)
  tableContact.Fields.Add("firstseen", db.Date)
  tableContact.Fields.Add("lastseen", db.Date)
  tableContact.PrimaryKey = ["id"]
  tableContact.Update()

END

PUBLIC SUB Form_Open()

  ' give focus to field
  DataControl1.SetFocus

  hTextBoxBirthDay = DataControl12.Children[0]

  ME.Move(FMain.X + 50, FMain.Y + 70)

  ' only display record(s) with matching numbers
  IF Len(sFilter) THEN DataSource1.Filter = Subst("phoneno LIKE '%&1' OR mobileno LIKE '%&1'", sFilter)

  WITH DataBrowser1.GridView
    .Columns[0].Text = ("Id")
    .Columns[0].Width = 28
    .Columns[1].Text = ("Phone No.")
    .Columns[1].Width = 100
    .Columns[2].Text = ("Mobile No.")
    .Columns[2].Width = 100
    .Columns[3].Text = ("Name")
    .Columns[3].Width = 140
    .Columns[4].Text = ("Address")
    .Columns[4].Width = 110
    .Columns[5].Text = ("City")
    .Columns[5].Width = 100
    .Columns[6].Text = ("Group")
    .Columns[6].Width = 80
  END WITH

END

PUBLIC SUB btnClose_Click()

  ME.Close

END

PUBLIC SUB btnDate_Click()

  hTextBoxBirthDay.Text = FSelectDate.Run(DataControl12.Value)

END

PUBLIC SUB btnSearch_Click()

  DIM sResponse AS String

  IF Len(DataControl7.Value) > 1 THEN
  sResponse = CallerID.FindCallerNameOnline(DataControl7.Value, TRUE)
  DataSource1.Refresh()
    ' notify user with result
    IF Len(sResponse) > 1 THEN
      Balloon(sResponse, DataBrowser1)
      'Message.Info(("Record updated with:\n") & sResponse)
    ELSE
      'Message.Info(("Sorry, couldn't find data online for number ") & DataControl7.Value)
      Balloon(("Sorry, couldn't find any data online."), btnSearch)
    ENDIF
  ELSE
    Balloon(("Please supply a Phonenumber here."), DataControl7)
  END IF
END
