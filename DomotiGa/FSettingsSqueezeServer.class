PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtTCPHost.Text = Main.sSqueezeServerTCPHost
  txtTCPPort.Text = Main.iSqueezeServerTCPPort
  chkDebug.Value = Main.bSqueezeServerDebug
  chkEnabled.Value = Main.bSqueezeServerEnabled
  btnSave.Enabled = FALSE

  IF Main.bSqueezeServerEnabled = FALSE THEN
    txtTCPHost.Enabled = FALSE
    txtTCPPort.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF
  

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPHost_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPPort_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new SqueezeServer settings
  rResult = Main.hDB.Exec("UPDATE settings_squeezeserver SET debug = &1, tcphost = &2, tcpport = &3, enabled = &4 WHERE id = 1", chkDebug.Value, txtTCPHost.Text, txtTCPPort.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("squeezeserver") ' reload settings
  IF rResult.Count THEN
    Main.bSqueezeServerEnabled = rResult!enabled
    Main.sSqueezeServerTCPHost = rResult!tcphost
    Main.iSqueezeServerTCPPort = rResult!tcpport
    Main.bSqueezeServerDebug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_SqueezeServer()
  ELSE
    XMLClient.ModuleRestart("SqueezeServer")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("squeezeserver", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtTCPHost.Text = rResult!tcphost
    txtTCPPort.Text = rResult!tcpport
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END
