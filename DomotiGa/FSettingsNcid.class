PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtTCPHost.Text = Main.sNcidTCPHost
  txtTCPPort.Text = Main.iNcidTCPPort
  chkDebug.Value = Main.bNcidDebug
  chkEnabled.Value = Main.bNcidEnabled
  btnSave.Enabled = FALSE

  IF Main.bNcidEnabled = FALSE THEN
    txtTCPHost.Enabled = FALSE
    txtTCPPort.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPHost_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new Ncid settings
  rResult = Main.hDB.Exec("UPDATE settings_ncid SET debug = &1, tcphost = &2, enabled = &3, tcpport= &4 WHERE id = 1", chkDebug.Value, txtTCPHost.Text, chkEnabled.Value, txtTCPPort.Text)
  rResult = Main.GetSettingTable("ncid") ' reload settings
  IF rResult.Count THEN
    Main.bNcidEnabled = rResult!enabled
    Main.sNcidTCPHost = rResult!tcphost
    Main.iNcidTCPPort = rResult!tcpport
    Main.bNcidDebug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_Ncid()
  ELSE
    XMLClient.ModuleRestart("Ncid")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("ncid", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtTCPHost.Text = rResult!tcphost
    txtTCPPort.Text = rResult!tcpport
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END
