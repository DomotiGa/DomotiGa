PUBLIC SUB btnSave_Click()

  DIM rResult AS Result
  DIM TempUpdate AS String[]

  ' save new Z-Wave settings
  rResult = Main.hDB.Exec("UPDATE settings_zwave SET debug = &1, serialport = &2, baudrate = &3, reloadnodes = &4, enabled = &5, useozw = &6, polltime = &7, polltimesleeping = &8, updateneighbor = &9, enablepollsleeping = &10, enableupdateneighbor = &11 WHERE id = 1", chkDebug.Value, txtSerialPort.Text, cmbBaudrate.Text, chkReloadNodes.Value, chkEnabled.Value, chkUseOZW.Value, vbPolltime.Value, txtPolltimeSleeping.Text, txtUpdateNeighbor.Text, chkEnablePollSleeping.Value, chkEnableUpdateNeighbor.Value)
  rResult = Main.GetSettingTable("zwave") ' reload settings
  IF rResult.Count THEN
    Main.bZWaveEnabled = rResult!enabled
    Main.sZWaveSerialPort = rResult!serialport
    Main.sZWaveBaudrate = rResult!baudrate
    Main.bZWaveReloadNodes = rResult!reloadnodes
    Main.bZWaveUseOZW = rResult!useozw
    Main.bZWaveDebug = rResult!debug
    Main.iZWavePollTime = rResult!polltime
    Main.sZWavePollTimeSleeping = rResult!polltimesleeping
    Main.sZWaveUpdateNeighbor = rResult!updateneighbor
    Main.bZWaveEnablePollSleeping = rResult!enablepollsleeping
    Main.bZWaveEnableUpdateNeighbor = rResult!enableupdateneighbor
  ENDIF

  IF Main.bServer THEN
    Main.Restart_ZWave()
  ELSE
    XMLClient.ModuleRestart("ZWave")
  END IF
  FMain.UpdateStatusPanel()
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("zwave", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtSerialPort.text = rResult!serialport
    cmbBaudrate.Text = rResult!baudrate
    chkReloadNodes.Value = rResult!reloadnodes
    chkUseOZW.Value = rResult!useozw
    chkDebug.Value = rResult!debug
    vbPolltime.Value = rResult!polltime
    txtPolltimeSleeping.Text = rResult!polltimesleeping
    txtUpdateNeighbor.Text = rResult!updateneighbor
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtSerialPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  cmbBaudrate.Enabled = chkEnabled.Value
  chkReloadNodes.Enabled = chkEnabled.Value
  chkUseOZW.Enabled = chkEnabled.Value
  vbPolltime.Enabled = chkUseOZW.Value
  txtPolltimeSleeping.Enabled = chkEnablePollSleeping.Value AND chkEnabled.Value AND chkUseOZW.Value 
  txtUpdateNeighbor.Enabled = chkEnableUpdateNeighbor.Value AND chkEnabled.Value AND chkUseOZW.Value 
  chkEnablePollSleeping.Enabled = chkUseOZW.Value AND chkEnabled.Value
  chkEnableUpdateNeighbor.Enabled = chkUseOZW.Value AND chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB cmbBaudrate_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkUseOZW_Click()

  btnSave.Enabled = TRUE
  vbPolltime.Enabled = chkUseOZW.Value
  txtPolltimeSleeping.Enabled = chkEnablePollSleeping.Value AND chkUseOZW.Value
  txtUpdateNeighbor.Enabled = chkEnableUpdateNeighbor.Value AND chkUseOZW.Value
  chkEnablePollSleeping.Enabled = chkUseOZW.Value
  chkEnableUpdateNeighbor.Enabled = chkUseOZW.Value

END

