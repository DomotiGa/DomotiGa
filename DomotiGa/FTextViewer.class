PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)
  ME.Text = FBarcodes.sTitle
  TextArea1.Text = FBarcodes.sText

END

PUBLIC SUB btnClose_Click()

  ME.Close

END

PUBLIC SUB btnSave_Click()

  Mail.SendMail(Application.Name & ": " & FBarcodes.sTitle, FBarcodes.sText, Main.sEmailToAddress)
  Message.Info(("Message is sent!"))
  ME.Close

END