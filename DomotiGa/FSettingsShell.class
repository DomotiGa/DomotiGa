PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  chkEnabled.Value = Main.bShellEnabled
  vbPollTime.Value = Main.iShellPollTime
  chkDebug.Value = Main.bShellDebug
  vbPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = FALSE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new Shell settings
  rResult = Main.hDB.Exec("UPDATE settings_shell SET debug = &1, enabled = &2, polltime = &3 WHERE id = 1", chkDebug.Value, chkEnabled.Value, vbPollTime.Value)
  rResult = Main.GetSettingTable("shell") ' reload settings
  IF rResult.Count THEN
    Main.bShellEnabled = rResult!enabled
    Main.iShellPollTime = rResult!polltime
    Main.bShellDebug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_Shell()
  ELSE
    XMLClient.ModuleRestart("Shell")
  END IF
  ME.Close

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB chkEnabled_Click()

  vbPollTime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("shell", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    vbPollTime.Value = rResult!polltime
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB vbPollTime_Change()

  btnSave.Enabled = TRUE

END
