PUBLIC timerPair AS NEW timer AS "TimerPair"
PUBLIC iPairTime AS Integer

PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  IF Main.bHMEnabled = FALSE THEN
    txtTCPPort.Enabled = FALSE
    txtHMhmid.Enabled = FALSE
    txtTCPHost.Enabled = FALSE
    chkDebug.Enabled = FALSE
  ENDIF

  txtTCPHost.Text = Main.sHMTCPHost
  txtTCPPort.Text = Main.iHMTCPPort
  chkDebug.Value = Main.bHMDebug
  chkEnabled.Value = Main.bHMEnabled
  btnSave.Enabled = FALSE
  txtHMhmid.Text = Main.sHMhmid
  dialPairSec.value = 0 ' amount of seconds to wait
  txtSerialno = ""

  ' if already running this will display the characteristics as read from the adapter
  IF Main.hHM THEN
    IF Main.hHM.sHMLANReportedAddress THEN TRY txtHMAddress.Text = Main.hHM.sHMLANReportedAddress
    IF Main.hHM.sHMLANReportedFW THEN TRY txtHMFirmware.Text = Main.hHM.sHMLANReportedFW 
    IF Main.hHM.sHMLANReportedSerial THEN TRY txtHMSerial.Text = Main.hHM.sHMLANReportedSerial
  ENDIF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new HM settings
  rResult = Main.hDB.Exec("UPDATE settings_homematic SET debug = &1, tcphost = &2, enabled = &3, tcpport = &4, hmid = &5 WHERE id = 1", chkDebug.Value, txtTCPHost.Text, chkEnabled.Value, txtTCPPort.Text, txtHMhmid.Text)
  rResult = Main.GetSettingTable("homematic") ' reload settings
  IF rResult.Count THEN
    Main.bHMEnabled = rResult!enabled
    Main.sHMTCPHost = rResult!tcphost
    Main.iHMTCPPort = rResult!tcpport
    Main.bHMDebug = rResult!debug
    Main.sHMhmid = rResult!hmid
    ENDIF
  IF Main.bServer THEN
    Main.Restart_HomeMatic()
  ELSE
    XMLClient.ModuleRestart("HomeMatic")
  ENDIF
  FMain.UpdateStatusPanel()
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("homematic", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtTCPPort.Text = rResult!tcpport
    txtTCPHost.Text = rResult!tcphost
    chkDebug.Value = rResult!debug
    txtHMhmid.Text = rResult!hmid
  ENDIF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  txtHMhmid.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPPort_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPHost_KeyPress()

  btnSave.Enabled = TRUE

END

' will be an action to start waiting for pair request
PUBLIC SUB txtPairSec_keypress()

  btnPairSec.Enabled = TRUE

END

PUBLIC SUB txtHMhmid_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnPairSec_Click()

  timerPair.Delay = 1000
  timerPair.Stop
  iPairTime = dialPairSec.Value
  Main.hHM.Pairing = TRUE
  timerPair.Start

END

PUBLIC SUB TimerPair_Timer()

  iPairTime = iPairTime - 1
  dialPairSec.Value = iPairTime
  lcdPairSec.Value = iPairTime
  IF iPairTime = 0 THEN
    timerPair.Stop
    Main.hHM.Pairing = FALSE
  ENDIF

END

PUBLIC SUB dialPairSec_MouseDrag()

  lcdPairSec.Value = dialPairSec.value

END
