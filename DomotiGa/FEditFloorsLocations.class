PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)
  WITH DataBrowser3.GridView
    .Columns[0].Text = "Id"
    .Columns[0].Width = 28
    .Columns[1].Text = ("Floor")
    .Columns[1].Width = 120
    .Columns[2].Text = ("Image")
    .Columns[2].Width = 70
  END WITH
  WITH DataBrowser2.GridView
    .Columns[0].Text = "Id"
    .Columns[0].Width = 28
    .Columns[1].Text = ("Location")
    .Columns[1].Width = 120
  END WITH

END

PUBLIC SUB btnClose_Click()

  ME.Close

END

PUBLIC SUB btnImageFloor_Click()

  DataControl1.Value = FSelectImage.Run(Main.sBaseDir &/ "images" &/ DataControl1.Value, "images")

END
