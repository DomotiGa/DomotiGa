PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  IF NOT Main.bRFXComRXEnabled OR IF NOT Main.hRFXComRX THEN
    DisableRX()
  ELSE
    chkDebug.Value = Main.hRFXComRX.RFXComDebug
  END IF
  IF NOT Main.hRFXComTX THEN
    DisableTX()
  ENDIF
  Main.FillCombo(cmbACDevice, "16")
  Main.FillCombo(cmbARCDevice, "16")
  chkDebugTX.Value = Main.hRFXComTX.RFXComDebug
  txtACAddress.Text = Main.sRFXComTXACAddress1 & Main.sRFXComTXACAddress2

END

PUBLIC SUB btnClose_Click()

  ME.Close

END

PUBLIC SUB btnInject_Click()

  IF Main.hRFXComRX THEN
    Main.hRFXComRX.bSimulate = TRUE
    IF txtPacketRX.Text THEN Main.hRFXComRX.Simulate(txtPacketRX.Text)
  END IF

END

