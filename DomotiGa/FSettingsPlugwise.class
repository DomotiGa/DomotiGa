PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtSerialPort.Text = Main.sPlugwiseSerialPort
  txtPolltime.Text = Main.iPlugwisePolltime
  chkDebug.Value = Main.bPlugwiseDebug
  chkEnabled.Value = Main.bPlugwiseEnabled
  cmbFirmware.Text = Main.iPlugwiseFirmware
  btnSave.Enabled = FALSE

  IF Main.bPlugwiseEnabled = FALSE THEN
    txtSerialPort.Enabled = FALSE
    txtPolltime.Enabled = FALSE
    cmbFirmware.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtSerialPort_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new Plugwise settings
  rResult = Main.hDB.Exec("UPDATE settings_plugwise SET debug = &1, serialport = &2, polltime = &3, firmware = &4, enabled = &5 WHERE id = 1", chkDebug.Value, txtSerialPort.Text, txtPolltime.Text, cmbFirmware.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("plugwise") ' reload settings
  IF rResult.Count THEN
    Main.bPlugwiseEnabled = rResult!enabled
    Main.sPlugwiseSerialPort = rResult!serialport
    Main.iPlugwisePolltime = rResult!polltime
    Main.iPlugwiseFirmware = rResult!firmware
    Main.bPlugwiseDebug = rResult!debug
  END IF
  IF Main.bStandalone THEN
    Main.Restart_Plugwise()
  ELSE
    XMLClient.ModuleRestart("Plugwise")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("plugwise", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtSerialPort.text = rResult!serialport
    txtPolltime.Text = rResult!polltime
    cmbFirmware.Text = rResult!firmware
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtSerialPort.Enabled = chkEnabled.Value
  txtPolltime.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  cmbFirmware.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB txtPolltime_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB cmbFirmware_Click()

  btnSave.Enabled = TRUE

END
