PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)
  LoadSettings()
  btnSave.Enabled = FALSE

  IF Main.bHDDTempEnabled = FALSE THEN
    txtTCPPort.Enabled = FALSE
    txtPollTime.Enabled = FALSE
    txtTCPHost.Enabled = FALSE
    txtThreshold.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtTCPPort_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtThreshold_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new HDDTemp settings
  rResult = Main.hDB.Exec("UPDATE settings_hddtemp SET threshold = &1, debug = &2, polltime = &3, tcphost = &4, tcpport = &5, enabled = &6 WHERE id = 1", txtThreshold.Text, chkDebug.Value, txtPollTime.Text, txtTCPHost.Text, txtTCPPort.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("hddtemp") ' reload settings
  IF rResult.Count THEN
    Main.bHDDTempEnabled = rResult!enabled
    Main.sHDDTempTCPHost = rResult!tcphost
    Main.iHDDTempTCPPort = rResult!tcpport
    Main.iHDDTempPollTime = rResult!polltime
    Main.iHDDTempThreshold = rResult!threshold
    Main.bHDDTempDebug = rResult!debug
  END IF
  IF Main.bServer THEN
    Main.Restart_HDDTemp()
  ELSE
    XMLClient.ModuleRestart("HDDTemp")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("hddtemp", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtPollTime.Text = rResult!polltime
    txtTCPHost.Text = rResult!tcphost
    txtTCPPort.Text = rResult!tcpport
    txtThreshold.Text = rResult!threshold
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtTCPHost.Enabled = chkEnabled.Value
  txtTCPPort.Enabled = chkEnabled.Value
  txtPollTime.Enabled = chkEnabled.Value
  txtThreshold.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB txtTCPHost_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB txtPollTime_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB LoadSettings()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("hddtemp") ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtPollTime.Text = rResult!polltime
    txtTCPHost.Text = rResult!tcphost
    txtTCPPort.Text = rResult!tcpport
    txtThreshold.Text = rResult!threshold
    chkDebug.Value = rResult!debug
  END IF

  txtTCPPort.Text = Main.iHDDTempTCPPort
  txtTCPHost.Text = Main.sHDDTempTCPHost
  txtPollTime.Text = Main.iHDDTempPollTime
  txtThreshold.Text = Main.iHDDTempThreshold
  chkDebug.Value = Main.bHDDTempDebug
  chkEnabled.Value = Main.bHDDTempEnabled
  txtUnit.Text = Main.sTemperature

END
