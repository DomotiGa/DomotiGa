PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  LoadSettings()
  btnSave.Enabled = FALSE

  IF Main.bHeyuEnabled = FALSE THEN
    txtCommand.Enabled = FALSE
    chkMonitor.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF
END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtCommand_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkMonitor_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new Heyu settings
  rResult = Main.hDB.Exec("UPDATE settings_heyu SET debug = &1, command = &2, enabled = &3, monitor = &4 WHERE id = 1", chkDebug.Value, txtCommand.Text, chkEnabled.Value, chkMonitor.Value)
  LoadSettings()
  IF Main.bStandalone THEN
    Main.Restart_Heyu()
  ELSE
    XMLClient.ModuleRestart("Heyu")
  END IF
  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("heyu", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtCommand.text = rResult!command
    chkMonitor.Value = rResult!monitor
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtCommand.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  chkMonitor.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB LoadSettings()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("heyu") ' reload settings
  IF rResult.Count THEN
    Main.bHeyuEnabled = rResult!enabled
    Main.sHeyuCommand = rResult!command
    Main.bHeyuMonitor = rResult!monitor
    Main.bHeyuDebug = rResult!debug
  END IF
  txtCommand.Text = Main.sHeyuCommand
  chkMonitor.Value = Main.bHeyuMonitor
  chkDebug.Value = Main.bHeyuDebug
  chkEnabled.Value = Main.bHeyuEnabled

END
