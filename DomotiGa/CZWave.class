PUBLIC SUB CancelControllerCommand() AS Boolean

  DIM bResult AS Boolean

  bResult = DomoZWave_CancelControllerCommand(iHomeID)

  IF bResult THEN
    IF bZWaveDebug THEN Main.WriteDebugLog(("[Z-Wave] Cancelling controller command"))
  ELSE
    IF bZWaveDebug THEN Main.WriteDebugLog(("[Z-Wave] Cancelling controller command, controller was already in normal operation mode"))
  ENDIF

  RETURN bResult

END

PUBLIC SUB AddDevice() AS Boolean

  DIM bResult AS Boolean

  ' First we execute the command
  ' If True == Command succeeded
  ' If False == Command failed (most likely controller is already in an add/remove mode)
  bResult = DomoZWave_AddDevice(iHomeID)

  IF bResult THEN
    IF bZWaveDebug THEN Main.WriteDebugLog(("[Z-Wave] Begin add device, press button on device to add!"))
  ELSE
    IF bZWaveDebug THEN Main.WriteDebugLog(("[Z-Wave] Begin add device, controller already in add/remove mode, press cancel first"))
  ENDIF

  RETURN bResult

END

