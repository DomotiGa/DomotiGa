'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
' translate between API and ZDK version numbering
'~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
PUBLIC SUB ExpandVersion(sVersion AS String) AS String

  SELECT sVersion
    CASE "2.78"
      RETURN "5.02 Patch 3"
    CASE "2.64"
      RETURN "5.02 Patch 2"
    CASE "2.51"
      RETURN "5.02 Patch 1"
    CASE "2.48"
      RETURN "5.02"
    CASE "2.74"
      RETURN "4.50"
    CASE "2.67"
      RETURN "4.28"
    CASE "2.40"
      RETURN "4.27"
    DEFAULT
      RETURN "Unknown"
    END SELECT

END

