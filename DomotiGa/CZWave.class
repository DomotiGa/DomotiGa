PUBLIC SUB tOZWKeepAlive_Timer()

  IF iControllerID = 0 THEN
    Main.WriteLog(("ERROR: Z-Wave interface FAILED to connect to Port ") & Main.sZWaveSerialPort & (" (retrying)"))
    tOZWKeepAlive.Stop
  ELSE

    IF bOZWKeepAliveState = FALSE THEN

       IF bOZWKeepAlivePrevState = TRUE THEN
          'Main.WriteLog(("ERROR: Z-Wave interface FAILED to respond in the polltime interval"))
          'Main.ControlLed("ZWave", "Off")
       ENDIF
       
    ELSE

       IF bOZWKeepAlivePrevState = FALSE THEN
          'Main.WriteLog(("Z-Wave interface responded again in the polltime interval"))
          'Main.ControlLed("ZWave", "On")
       ENDIF

    ENDIF

    bOZWKeepAlivePrevState = bOZWKeepAliveState
    bOZWKeepAliveState = FALSE

  ENDIF

