PUBLIC SUB RemoveFailedNode(iNodeId AS Integer) AS Boolean

  DIM bResult AS Boolean

  bResult = DomoZWave_RemoveFailedNode(iHomeID, iNodeId)

  IF bResult THEN
    IF bZWaveDebug THEN Main.WriteDebugLog(("[Z-Wave] Remove failed node executed (only works if the node is on the failed list)"))
  ELSE
    IF bZWaveDebug THEN Main.WriteDebugLog(("[Z-Wave] Remove failed node can't be executed. The controller isn't in normal mode"))
  ENDIF

END

