PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  txtSerialPort.Text = Main.sVISCASerialPort
  cmbBaudrate.Text = Main.sVISCABaudrate
  spbCameraAddress.Value = Main.iVISCACameraAddress
  chkDebug.Value = Main.bVISCADebug
  txtVideoDevice.Text = Main.sVISCAVideoDevice
  chkEnabled.Value = Main.bVISCAEnabled
  btnSave.Enabled = FALSE

  IF Main.bVISCAEnabled = FALSE THEN 
    txtSerialPort.Enabled = FALSE
    cmbBaudrate.Enabled = FALSE
    spbCameraAddress.Enabled = FALSE
    txtVideoDevice.Enabled = FALSE
    chkDebug.Enabled = FALSE
  END IF

END

PUBLIC SUB btnCancel_Click()

  ME.Close

END

PUBLIC SUB txtSerialPort_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB cmbBaudrate_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB spbCameraAddress_KeyPress()

  btnSave.Enabled = TRUE

END

PUBLIC SUB chkDebug_Click()

  btnSave.Enabled = TRUE

END

PUBLIC SUB btnSave_Click()

  DIM rResult AS Result

  ' save new VISCA settings
  rResult = Main.hDB.Exec("UPDATE settings_visca SET device = &1, debug = &2, cameraaddress = &3, serialport = &4, baudrate = &5, enabled = &6 WHERE id = 1", txtVideoDevice.Text, chkDebug.Value, spbCameraAddress.Value, txtSerialPort.Text, cmbBaudrate.Text, chkEnabled.Value)
  rResult = Main.GetSettingTable("visca") ' reload settings
  IF rResult.Count THEN
    Main.bVISCAEnabled = rResult!enabled
    Main.sVISCASerialPort = rResult!serialport
    Main.sVISCABaudrate = rResult!baudrate
    Main.iVISCACameraAddress = rResult!cameraaddress
    Main.sVISCAVideoDevice = rResult!device
    Main.bVISCADebug = rResult!debug
  END IF
  Main.Restart_VISCA()

  ME.Close

END

PUBLIC SUB btnDefaults_Click()

  DIM rResult AS Result

  rResult = Main.GetSettingTable("visca", TRUE) ' get defaults
  IF rResult.Count THEN
    chkEnabled.Value = rResult!enabled
    txtSerialPort.Text = rResult!serialport
    spbCameraAddress.Value = rResult!cameraaddress
    cmbBaudrate.Text = rResult!baudrate
    txtVideoDevice.Text = rResult!device
    chkDebug.Value = rResult!debug
  END IF
  btnSave.Enabled = TRUE

END

PUBLIC SUB chkEnabled_Click()

  txtSerialPort.Enabled = chkEnabled.Value
  cmbBaudrate.Enabled = chkEnabled.Value
  spbCameraAddress.Enabled = chkEnabled.Value
  txtVideoDevice.Enabled = chkEnabled.Value
  chkDebug.Enabled = chkEnabled.Value
  btnSave.Enabled = TRUE

END

PUBLIC SUB spbCameraAddress_Change()

  btnSave.Enabled = TRUE

END
