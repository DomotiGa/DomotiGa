PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)
  lblVersion.Text = "version " & Application.Version

END

PUBLIC SUB btnClose_Click()

  ME.Close

END

PUBLIC SUB lblWebsite_MouseDown()

  Main.OpenWebPage("http://www.domotiga.nl")

END

