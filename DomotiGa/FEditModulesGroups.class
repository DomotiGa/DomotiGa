PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  WITH DataBrowserModules.GridView
    .Columns[0].Text = ("Id")
    .Columns[0].Width = 28
    .Columns[1].Text = ("Name")
    .Columns[1].Width = 140
    .Columns[2].Text = ("Description")
    .Columns[2].Width = 160
    .Columns[3].Text = ("Type")
    .Columns[3].Width = 80
  END WITH
  WITH DataBrowserGroups.GridView
    .Columns[0].Text = ("Id")
    .Columns[0].Width = 28
    .Columns[1].Text = ("Group")
    .Columns[1].Width = 120
  END WITH
  WITH DataBrowserLocations.GridView
    .Columns[0].Text = ("Id")
    .Columns[0].Width = 28
    .Columns[1].Text = ("Location")
    .Columns[1].Width = 120
  END WITH
  WITH DataBrowserFloorplans.GridView
    .Columns[0].Text = ("Id")
    .Columns[0].Width = 28
    .Columns[1].Text = ("Floor")
    .Columns[1].Width = 120
    .Columns[2].Text = ("Image")
    .Columns[2].Width = 70
  END WITH
  WITH DataBrowserBlacklist.GridView
    .Columns[0].Text = ("Id")
    .Columns[0].Width = 28
    .Columns[1].Text = ("Address")
    .Columns[1].Width = 130
    .Columns[2].Text = ("Comments")
    .Columns[2].Width = 130
  END WITH

END

PUBLIC SUB btnClose_Click()

  ME.Close

END

PUBLIC SUB btnImageFloor_Click()

  DataControlF1.Value = FSelectImage.Run(Main.sBaseDir &/ "floorplans" &/ DataControlF1.Value, "floorplans")

END