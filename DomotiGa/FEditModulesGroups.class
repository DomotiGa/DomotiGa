PUBLIC SUB Form_Open()

  ME.Move(FMain.X + 50, FMain.Y + 70)

  WITH DataBrowser1.GridView
    .Columns[0].Text = "Id"
    .Columns[0].Width = 28
    .Columns[1].Text = ("Name")
    .Columns[1].Width = 140
    .Columns[2].Text = ("Description")
    .Columns[2].Width = 160
    .Columns[3].Text = ("Type")
    .Columns[3].Width = 50
  END WITH
  WITH DataBrowser2.GridView
    .Columns[0].Text = "Id"
    .Columns[0].Width = 28
    .Columns[1].Text = ("Group")
    .Columns[1].Width = 120
  END WITH
END

PUBLIC SUB btnClose_Click()

  ME.Close

END
